{% extends 'base.html.twig' %}

{% block title %}Postuler à {{ offre.titreoffre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h4 mb-0">Postuler à l'offre: {{ offre.titreoffre }}</h1>
                    </div>
                    
                    <div class="card-body">
                        <div class="mb-4">
                            <h2 class="h5 text-primary">Description du poste</h2>
                            <div class="p-3 bg-light rounded">
                                {{ offre.descriptionoffre }}
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h2 class="h5 text-primary">Détails de l'offre</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Type de contrat:</strong> {{ offre.typecontrat.value }}</p>
                                    <p><strong>Localisation:</strong> {{ offre.localisationoffre }}</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Salaire:</strong> {{ offre.salaireoffre }} €</p>
                                    <p><strong>Date limite:</strong> {{ offre.datelimite|date('d/m/Y') }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="mt-4">
                            <h2 class="h5 text-primary">Analyse de votre CV</h2>
                            <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                                <div class="mb-3">
                                    <label for="cv" class="form-label">Téléverser votre CV (PDF ou Word)</label>
                                    <input class="form-control" type="file" id="cv" name="cv" accept=".pdf,.doc,.docx" required>
                                    <div class="invalid-feedback">
                                        Veuillez sélectionner un fichier CV.
                                    </div>
                                    <small class="text-muted">Taille maximale : 5MB</small>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-chart-line me-2"></i> Analyser la compatibilité
                                </button>
                            </form>
                            
                            {% if similarity_score is not null %}
                                <div class="mt-4">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-info text-white">
                                            <h3 class="h5 mb-0">Résultats d'analyse</h3>
                                        </div>
                                        <div class="card-body text-center">
                                            <div class="progress mb-3" style="height: 30px;">
                                                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                                                     role="progressbar" 
                                                     style="width: {{ similarity_score }}%"
                                                     aria-valuenow="{{ similarity_score }}" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    {{ similarity_score|number_format(2) }}%
                                                </div>
                                            </div>
                                            <p class="mb-0">
                                                Votre CV correspond à <strong>{{ similarity_score|number_format(2) }}%</strong> 
                                                avec les exigences de cette offre.Un interview vous sera communiqué.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .progress-bar {
            font-size: 1rem;
            font-weight: bold;
        }
    </style>
{% endblock %}