{% extends 'base1.html.twig' %}

{% block title %}Modifier la Branche d'entreprise{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    .container {
      margin-top: 20px;
    }

    .card {
      border-radius: 8px;
      border: 1px solid #ddd;
      margin-bottom: 20px;
    }

    .card-header {
      background-color: #007bff;
      color: white;
      font-size: 1.25rem;
      font-weight: bold;
      border-top-left-radius: 8px;
      border-top-right-radius: 8px;
    }

    .card-body {
      background-color: #f9f9f9;
      padding: 1.5rem;
    }

    .btn-group {
      display: flex;
      gap: 10px;
      justify-content: flex-start;
    }

    .btn {
      font-size: 1rem;
      padding: 0.75rem 1.25rem;
      border-radius: 5px;
    }

    .btn-secondary {
      background-color: #6c757d;
      border-color: #6c757d;
    }

    .btn-secondary:hover {
      background-color: #5a6268;
      border-color: #545b62;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .text-center {
      text-align: center;
    }

    .mb-3 {
      margin-bottom: 1.5rem;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center mb-4">Modifier la Branche d'entreprise</h1>

    <div class="card shadow-sm">
      <div class="card-header">
        <h6 class="m-0 font-weight-bold text-white">Formulaire de modification</h6>
      </div>
      <div class="card-body">
        {{ include('brancheentreprise/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <a href="{{ path('app_brancheentreprise_index') }}" class="btn btn-secondary">
          <i class="fas fa-arrow-left mr-2"></i>Retour à la liste
        </a>
        {# Ajoute ce bouton si tu as une page détail #}
        {# 
        <a href="{{ path('app_brancheentreprise_show', {'idbranche': brancheEntreprise.idbranche}) }}" class="btn btn-primary">
          <i class="fas fa-eye mr-2"></i>Voir les détails
        </a>
        #}
      </div>

      <div class="mt-3">
        {{ include('brancheentreprise/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascript %}
  {{ parent() }}
{% endblock %}
