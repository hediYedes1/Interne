{% extends 'base1.html.twig' %}

{% block title %}Liste des Branches d'Entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .card-header {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
            border-radius: 10px 10px 0 0;
            padding: 1.5rem;
        }
        .table {
            margin-bottom: 0;
        }
        .table th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #495057;
            font-weight: 600;
        }
        .table td {
            vertical-align: middle;
        }
        .btn-action {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            margin: 0 0.25rem;
        }
        .btn-show {
            background-color: #17a2b8;
            color: white;
        }
        .btn-edit {
            background-color: #ffc107;
            color: #212529;
        }
        .empty-message {
            text-align: center;
            padding: 2rem;
            color: #6c757d;
        }
        .actions-column {
            width: 150px;
        }
        .entreprise-badge {
            background-color: #e9ecef;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            color: #495057;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-code-branch me-2"></i>
                    Liste des Branches d'Entreprise
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Entreprise</th>
                                <th>Localisation</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Employés</th>
                                <th>Responsable</th>
                                <th class="text-center actions-column">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for brancheentreprise in brancheentreprises %}
                            <tr>
                                <td>{{ brancheentreprise.idbranche }}</td>
                                <td>
                                    {% if brancheentreprise.identreprise is defined and brancheentreprise.identreprise is not null %}
                                        <span class="entreprise-badge">
                                            {{ brancheentreprise.identreprise.nomentreprise }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">Non assignée</span>
                                    {% endif %}
                                </td>
                                <td>{{ brancheentreprise.localisationbranche }}</td>
                                <td>
                                    <a href="mailto:{{ brancheentreprise.emailbranche }}">
                                        {{ brancheentreprise.emailbranche }}
                                    </a>
                                </td>
                                <td>{{ brancheentreprise.contactbranche }}</td>
                                <td>{{ brancheentreprise.nombreemploye }}</td>
                                <td>{{ brancheentreprise.responsablebranche }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_brancheentreprise_show', {'idbranche': brancheentreprise.idbranche}) }}" 
                                       class="btn btn-show btn-action" 
                                       title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_brancheentreprise_edit', {'idbranche': brancheentreprise.idbranche}) }}" 
                                       class="btn btn-edit btn-action"
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="empty-message">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <p>Aucune branche d'entreprise trouvée</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}