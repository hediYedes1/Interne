{% extends 'base.html.twig' %}

{% block title %}Détail Réservation{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Détail de la Réservation</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Réservation du 
                        {{ affectationhebergement.datedebut ? affectationhebergement.datedebut|date('d/m/Y') : '' }} 
                        au 
                        {{ affectationhebergement.datefin ? affectationhebergement.datefin|date('d/m/Y') : '' }}
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Détails de l'Hébergement</h5>

                    <p><strong>Nom:</strong> {{ affectationhebergement.idhebergement.nomhebergement }}</p>
                    <p><strong>Type:</strong> {{ affectationhebergement.idhebergement.typehebergement }}</p>
                    <p><strong>Adresse:</strong> {{ affectationhebergement.idhebergement.adressehebergement }}</p>
                    <p><strong>Description:</strong> {{ affectationhebergement.idhebergement.descriptionhebergement }}</p>
                    <p><strong>Nombre de nuitées:</strong> {{ affectationhebergement.idhebergement.nbrnuitehebergement }}</p>
                    <p><strong>Prix:</strong> {{ affectationhebergement.idhebergement.prixhebergement }} dt</p>
                    <p>
                        <strong>Disponibilité:</strong> 
                        <span class="badge {% if affectationhebergement.idhebergement.disponibilitehebergement %}bg-success{% else %}bg-danger{% endif %}">
                            {% if affectationhebergement.idhebergement.disponibilitehebergement %}
                                ✔️ Disponible
                            {% else %}
                                ✖️ Non disponible
                            {% endif %}
                        </span>
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_affectationhebergement_index') }}" class="btn btn-secondary">⬅ Retour à la liste</a>
                    
                        <a href="{{ path('app_affectationhebergement_edit', {'idhebergement': affectationhebergement.idhebergement.idhebergement}) }}" class="btn btn-warning">✏️ Modifier</a>
                        {{ include('affectationhebergement/_delete_form.html.twig') }}
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
