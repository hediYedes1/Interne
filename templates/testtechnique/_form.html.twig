<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h3 class="text-center font-weight-light my-4">
            <i class="fas fa-file-alt mr-2"></i>Formulaire de Test Technique
        </h3>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

        <div class="form-group row">
            <div class="col-md-6 mb-3">
                <label class="col-form-label">Titre du test</label>
                <div class="col-sm-12">
                    {{ form_widget(form.titretesttechnique, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titretesttechnique, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label class="col-form-label">Durée (minutes)</label>
                <div class="col-sm-12">
                    {{ form_widget(form.dureetesttechnique, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dureetesttechnique, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label class="col-form-label">Description</label>
            <div class="col-sm-12">
                {{ form_widget(form.descriptiontesttechnique, {
                    'attr': {
                        'class': 'form-control', 
                        'style': 'height: 120px',
                        'id': 'testtechnique_description'
                    }
                }) }}
                <button type="button" id="check-grammar-btn" class="btn btn-outline-secondary mt-2">
                    <i class="fas fa-spell-check"></i> Vérifier la grammaire
                </button>
                <div id="grammar-correction" class="mt-2"></div>
                {{ form_errors(form.descriptiontesttechnique, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>

        {% if form.idinterview is defined %}
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                <label class="col-form-label">Interview associée</label>
                <div class="col-sm-12">
                    {{ form_widget(form.idinterview, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.idinterview, {'attr': {'class': 'text-danger'}}) }}
                </div>
            </div>
        </div>
        {% endif %}

        <div class="form-group text-right mt-4">
            {% if interview is defined %}
                <a href="{{ path('app_testtechnique_by_interview', {'idinterview': interview.idinterview}) }}"
                   class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left mr-2"></i> Retour
                </a>
            {% else %}
                <a href="{{ path('app_testtechnique_by_interview', {'idinterview': testtechnique.idinterview.idinterview}) }}"
                   class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
                </a>
            {% endif %}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save mr-2"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>




<style>
    .card {
        border-radius: 10px;
        border-width: 2px;
    }
    .form-control:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }
    .btn-primary:hover {
        background-color: #2e59d9;
        border-color: #2653d4;
    }
    #grammar-correction .alert {
        padding: 12px;
        border-radius: 6px;
        margin-top: 10px;
    }
    #check-grammar-btn {
        transition: all 0.3s ease;
    }
    #check-grammar-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
    #grammar-correction button {
        transition: all 0.2s ease;
    }
    #grammar-correction ul {
        padding-left: 20px;
    }
    #grammar-correction li {
        margin-bottom: 5px;
    }
</style>