<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-gradient-primary text-white">
        <h3 class="text-center font-weight-light my-4">
            <i class="fas fa-file-alt mr-2"></i>Formulaire de Test Technique
        </h3>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="form-group row mb-4">
            <div class="col-md-6">
                <div class="form-floating">
                    {{ form_widget(form.titretesttechnique, {'attr': {
                        'class': 'form-control form-control-lg',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.titretesttechnique, 'Titre du test', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.titretesttechnique) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    {{ form_widget(form.dureetesttechnique, {'attr': {
                        'class': 'form-control form-control-lg',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.dureetesttechnique, 'Durée (minutes)', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.dureetesttechnique) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-4">
            <div class="form-floating">
                {{ form_widget(form.descriptiontesttechnique, {'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': ' ',
                    'style': 'height: 120px'
                }}) }}
                {{ form_label(form.descriptiontesttechnique, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.descriptiontesttechnique) }}
                </div>
            </div>
        </div>

       <div class="form-group row mb-4">
    <div class="col-md-6">
        <div class="form-floating">
            {{ form_widget(form.statuttesttechnique, {'attr': {
                'class': 'form-select form-select-lg'
            }}) }}
            {{ form_label(form.statuttesttechnique, 'Statut du test', {'label_attr': {'class': 'form-label'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.statuttesttechnique) }}
            </div>
        </div>
    </div>
    {% if form.idinterview is defined %}
    <div class="col-md-6">
        <div class="form-floating">
            {{ form_widget(form.idinterview, {'attr': {
                'class': 'form-select form-select-lg'
            }}) }}
            {{ form_label(form.idinterview, 'Interview associée', {'label_attr': {'class': 'form-label'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.idinterview) }}
            </div>
        </div>
    </div>
    {% endif %}
</div>


        <!-- Début du bloc de boutons intégré -->
        <div class="form-group d-flex justify-content-between mt-5">
            {% if interview is defined %}
                <a href="{{ path('app_testtechnique_by_interview', {'idinterview': interview.idinterview}) }}" 
                   class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left mr-2"></i> Retour
                </a>
            {% else %}
                 <a href="{{ path('app_testtechnique_by_interview', {'idinterview': testtechnique.idinterview.idinterview}) }}" 
               class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50 mr-2"></i>Retour à la liste
            </a>
            {% endif %}
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save mr-2"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
        <!-- Fin du bloc de boutons intégré -->

        {{ form_end(form) }}
    </div>
</div>