{% extends 'base.html.twig' %}

{% block title %}Passer le Quiz - {{ testtechnique.titretesttechnique }}{% endblock %}

{% block css %}
{{ parent() }}
<style>
    .quiz-container {
        max-width: 800px;
        margin: 0 auto;
    }
    .question-card {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        background: white;
    }
    .question-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    .question-number {
        background: #4e73df;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-weight: bold;
    }
    .question-text {
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0;
    }
    .question-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }
    .answers-container {
        margin-left: 45px;
    }
    .answer-option {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        padding: 8px 12px;
        border-radius: 5px;
        transition: all 0.3s;
    }
    .answer-option:hover {
        background-color: #f8f9fa;
    }
    .answer-option input {
        margin-right: 10px;
    }
    .answer-label {
        display: flex;
        align-items: center;
        width: 100%;
        cursor: pointer;
    }
    .answer-letter {
        display: inline-block;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        background: #f8f9fa;
        color: #495057;
        text-align: center;
        line-height: 25px;
        margin-right: 10px;
        font-weight: bold;
    }
    .correct-answer {
        background-color: #d4edda;
        border-left: 4px solid #28a745;
    }
    .incorrect-answer {
        background-color: #f8d7da;
        border-left: 4px solid #dc3545;
    }
    .feedback {
        margin-top: 15px;
        padding: 10px;
        border-radius: 5px;
        display: none;
    }
    .explanation {
        background-color: #e7f5ff;
        border-left: 4px solid #4e73df;
    }
    .tip {
        background-color: #fff3bf;
        border-left: 4px solid #ffd43b;
    }
    .quiz-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }
    .quiz-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
    }
    .quiz-score {
        background: #4e73df;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
    }
    .submit-btn {
        padding: 10px 30px;
        font-size: 1.1rem;
        font-weight: 600;
    }
    /* Styles pour la modal */
    .modal-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }
    .modal-statut {
        font-size: 2rem;
        font-weight: bold;
    }
    .modal-score {
        font-size: 1.5rem;
        color: #6c757d;
    }
    .modal-message {
        margin-top: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid quiz-container">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="quiz-header">
                <h1 class="quiz-title">Quiz: {{ testtechnique.titretesttechnique }}</h1>
                <div class="quiz-score">Score: <span id="score-display">0</span>/{{ testtechnique.questions|length }}</div>
            </div>
        </div>
        <div class="card-body">
            <form id="quiz-form" method="POST">
                <input type="hidden" name="test_id" value="{{ testtechnique.idtesttechnique }}">
                
                {% for question in testtechnique.questions %}
                <div class="question-card" id="question-{{ loop.index0 }}">
                    <div class="question-header">
                        <div class="question-number">{{ loop.index }}</div>
                        <h3 class="question-text">{{ question.question }}</h3>
                    </div>
                    
                    {% if question.description is defined and question.description %}
                        <p class="question-description">{{ question.description }}</p>
                    {% endif %}
                    
                    <div class="answers-container">
                        {% set letters = ['A', 'B', 'C', 'D', 'E', 'F'] %}
                        {% for key, answer in question.answers %}
                            {% if answer %}
                            <div class="answer-option">
                                <input class="form-check-input" type="radio" 
                                       name="answers[{{ loop.parent.loop.index0 }}]" 
                                       id="q{{ loop.parent.loop.index0 }}_a{{ loop.index0 }}" 
                                       value="{{ key }}"
                                       required>
                                <label class="answer-label" for="q{{ loop.parent.loop.index0 }}_a{{ loop.index0 }}">
                                    <span class="answer-letter">{{ letters[loop.index0] }}</span>
                                    <span class="answer-text">{{ answer }}</span>
                                </label>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    
                    <div class="feedback mt-3" style="display: none;">
                        {% if question.explanation is defined and question.explanation %}
                            <div class="alert alert-info explanation">{{ question.explanation }}</div>
                        {% endif %}
                        
                        {% if question.tip is defined and question.tip %}
                            <div class="alert alert-warning tip"><strong>Astuce:</strong> {{ question.tip }}</div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
                
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary submit-btn">
                        <i class="fas fa-paper-plane"></i> Soumettre le quiz
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Résultats -->
    <div class="modal fade" id="quizResultModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-white">
                    <h5 class="modal-title">Résultats du Quiz</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas modal-icon"></i>
                    <h3 class="modal-statut mb-3"></h3>
                    <p class="modal-score"></p>
                    <p class="modal-message text-muted"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <a href="{{ path('app_testtechnique_show_front', {'idtesttechnique': testtechnique.idtesttechnique}) }}" 
                       class="btn btn-primary">
                        Détails complets
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
{{ parent() }}
<script>
$(document).ready(function() {
    const quizForm = $('#quiz-form');
    const resultModal = new bootstrap.Modal(document.getElementById('quizResultModal'));

    quizForm.on('submit', function(e) {
        e.preventDefault();
        
        const submitBtn = quizForm.find('button[type="submit"]');
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Envoi en cours...');

        // Construction des réponses
        const answers = {};
        $('input[type="radio"]:checked').each(function() {
            const name = $(this).attr('name');
            const match = name.match(/answers\[(\d+)\]/);
            if (match) answers[match[1]] = $(this).val();
        });

        $.ajax({
            url: '{{ path("quiz_submit_front") }}',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                test_id: $('input[name="test_id"]').val(),
                answers: answers
            }),
            dataType: 'json'
        })
        .done(function(response) {
            if (response.success) {
                // Mettre à jour les données de la modal
                const isAccepted = response.statut === 'ACCEPTE';
                const modal = $('#quizResultModal');
                
                // Mise à jour des classes CSS
                modal.find('.modal-header')
                    .removeClass('bg-success bg-danger')
                    .addClass(isAccepted ? 'bg-success' : 'bg-danger');
                
                // Mise à jour de l'icône
                modal.find('.modal-icon')
                    .removeClass('fa-check-circle fa-times-circle text-success text-danger')
                    .addClass(isAccepted ? 'fa-check-circle text-success' : 'fa-times-circle text-danger');

                // Mise à jour du contenu
                modal.find('.modal-statut').text(response.statut);
                modal.find('.modal-score').text('Score: ' + response.score);
                modal.find('.modal-message').text(
                    isAccepted ? 
                    'Félicitations! Vous avez réussi le test technique.' : 
                    'Malheureusement, vous n\'avez pas atteint le score requis.'
                );

                // Afficher la modal
                resultModal.show();

                // Mettre à jour le score affiché
                $('#score-display').text(response.score.split('/')[0]);

                // Afficher les bonnes/mauvaises réponses
                if (response.results) {
                    response.results.forEach((result, index) => {
                        const question = $(`#question-${index}`);
                        const selectedAnswer = question.find(`input[value="${answers[index]}"]`).parent();
                        
                        if (result.isCorrect) {
                            selectedAnswer.addClass('correct-answer');
                        } else {
                            selectedAnswer.addClass('incorrect-answer');
                            question.find(`input[value="${result.correctAnswer}"]`).parent().addClass('correct-answer');
                        }
                        
                        question.find('.feedback').show();
                    });
                }
            } else {
                alert('Erreur: ' + response.message);
            }
        })
        .fail(function(xhr) {
            console.error("Erreur AJAX:", xhr.responseText);
            alert('Échec de communication avec le serveur');
        })
        .always(function() {
            submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane"></i> Soumettre');
        });
    });
});
</script>
{% endblock %}