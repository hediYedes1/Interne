{% extends 'base1.html.twig' %}

{% block title %}Hébergement{% endblock %}

{% block body %}
    <div class="container-fluid px-4 py-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h2 text-primary fw-bold mb-0">Détails de l'hébergement</h1>
                        <p class="text-muted">Informations complètes sur l'hébergement</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_hebergement_admin_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <a href="{{ path('app_hebergement_admin_edit', {'idhebergement': hebergement.idhebergement}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Main Information Card -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="accommodation-logo me-3">
                                <div class="logo-placeholder rounded-circle bg-primary-subtle d-flex align-items-center justify-content-center">
                                    <span class="h3 mb-0 text-primary">{{ hebergement.nomhebergement|first|upper }}</span>
                                </div>
                            </div>
                            <div>
                                <h2 class="h3 mb-1 fw-bold text-dark">{{ hebergement.nomhebergement }}</h2>
                                <p class="mb-0 text-muted">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    {{ hebergement.adressehebergement }}
                                </p>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-card p-3 bg-light rounded-3 h-100">
                                    <h3 class="h6 mb-3 text-dark">Type & Prix</h3>
                                    <p class="mb-2 d-flex align-items-center">
                                        <i class="fas fa-building me-2 text-primary"></i>
                                        <span>{{ hebergement.typehebergement }}</span>
                                    </p>
                                    <p class="mb-0 d-flex align-items-center">
                                        <i class="fas fa-tag me-2 text-primary"></i>
                                        <span class="fw-bold">{{ hebergement.prixhebergement }} DT</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3 bg-light rounded-3 h-100">
                                    <h3 class="h6 mb-3 text-dark">Disponibilité</h3>
                                    <p class="mb-2 d-flex align-items-center">
                                        <i class="fas fa-calendar-check me-2 text-primary"></i>
                                        <span>{{ hebergement.disponibilitehebergement ? 'Disponible' : 'Non disponible' }}</span>
                                    </p>
                                    <p class="mb-0 d-flex align-items-center">
                                        <i class="fas fa-moon me-2 text-primary"></i>
                                        <span>{{ hebergement.nbrnuitehebergement }} nuit(s)</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="description-section mb-4">
                            <h3 class="h5 mb-3 text-dark">Description</h3>
                            <div class="p-3 bg-light rounded-3">
                                <p class="mb-0">{{ hebergement.descriptionhebergement }}</p>
                            </div>
                        </div>

                        <!-- Performance Metrics -->
                        <div class="performance-section mb-4">
                            <h3 class="h5 mb-3 text-dark">Performance</h3>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-primary-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-chart-line fa-2x text-primary"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Taux d'occupation</h4>
                                        <div class="h3 mb-2 fw-bold text-primary">87%</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: 87%;" aria-valuenow="87" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-success-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-smile fa-2x text-success"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Satisfaction client</h4>
                                        <div class="h3 mb-2 fw-bold text-success">92%</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 92%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-info-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-calendar-check fa-2x text-info"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Taux de réservation</h4>
                                        <div class="h3 mb-2 fw-bold text-info">78%</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 78%;" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="data-table mt-4">
                           
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Performance Card -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Performance</h3>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Taux d'occupation</span>
                                <span class="small">87%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 87%;" aria-valuenow="87" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Satisfaction client</span>
                                <span class="small">92%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 92%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Taux de réservation</span>
                                <span class="small">78%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 78%;" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="performanceChart" height="200"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Location Card -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Localisation</h3>
                        <div class="map-placeholder bg-light rounded-3 mb-3" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                            <div class="text-center">
                                <i class="fas fa-map-marker-alt fa-3x text-primary mb-2"></i>
                                <p class="mb-0">{{ hebergement.localisationhebergement }}</p>
                            </div>
                        </div>
                        <a href="https://maps.google.com/?q={{ hebergement.adressehebergement }}" target="_blank" class="btn btn-outline-primary w-100">
                            <i class="fas fa-external-link-alt me-2"></i>Voir sur Google Maps
                        </a>
                    </div>
                </div>

                <!-- Availability Card -->
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Statut de disponibilité</h3>
                        <div class="status-indicator p-3 rounded-3 text-center mb-3 {{ hebergement.disponibilitehebergement ? 'bg-success-subtle' : 'bg-danger-subtle' }}">
                            <i class="fas {{ hebergement.disponibilitehebergement ? 'fa-check-circle' : 'fa-times-circle' }} fa-3x {{ hebergement.disponibilitehebergement ? 'text-success' : 'text-danger' }} mb-2"></i>
                            <h4 class="h6 mb-0 {{ hebergement.disponibilitehebergement ? 'text-success' : 'text-danger' }}">
                                {{ hebergement.disponibilitehebergement ? 'Disponible' : 'Non disponible' }}
                            </h4>
                        </div>
                        <div class="d-grid">
                            <a href="{{ path('app_affectation_admin_index') }}" class="btn btn-outline-primary">
                                <i class="fas fa-calendar-check me-2"></i>Voir les réservations
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer l'hébergement <strong>{{ hebergement.nomhebergement }}</strong> ?</p>
                    <p class="text-danger small">Cette action est irréversible et supprimera toutes les données associées.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                    {{ include('hebergement_admin/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #dddfeb;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --text-color: #5a5c69;
            --light-bg: #f8f9fc;
        }

        .text-primary { color: var(--primary-color) !important; }
        .text-success { color: var(--success-color) !important; }
        .text-info { color: var(--info-color) !important; }
        
        .btn-primary, .bg-primary { 
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-outline-primary {
            color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-outline-primary:hover {
            background-color: var(--primary-color) !important;
            color: white !important;
        }
        
        .logo-placeholder {
            width: 64px;
            height: 64px;
        }
        
        .table th {
            font-weight: 600;
            font-size: 0.85rem;
            color: var(--text-color);
        }
        
        .bg-primary-subtle { background-color: rgba(78, 115, 223, 0.1); }
        .bg-success-subtle { background-color: rgba(28, 200, 138, 0.1); }
        .bg-info-subtle { background-color: rgba(54, 185, 204, 0.1); }
        .bg-danger-subtle { background-color: rgba(231, 74, 59, 0.1); }
        
        .progress {
            background-color: rgba(78, 115, 223, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .progress-bar {
            border-radius: 10px;
        }
        
        .metric-card {
            transition: transform 0.2s ease;
        }
        
        .metric-card:hover {
            transform: translateY(-5px);
        }
        
        .chart-container {
            position: relative;
            margin-top: 1rem;
            height: 200px;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof Chart !== 'undefined') {
                // Performance chart
                var ctx = document.getElementById('performanceChart').getContext('2d');
                var performanceChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Taux d\'occupation',
                            data: [75, 78, 80, 85, 87, 90],
                            borderColor: '#4e73df',
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
