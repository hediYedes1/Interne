{% extends 'baseadmin.html.twig' %}

{% block title %}Hébergement{% endblock %}

{% block body %}
    <h1 class="title">Détails de l'hébergement</h1>

    <table class="styled-table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ hebergement.idhebergement }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ hebergement.nomhebergement }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ hebergement.adressehebergement }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ hebergement.typehebergement }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hebergement.descriptionhebergement }}</td>
            </tr>
            <tr>
                <th>Nombre de nuits</th>
                <td>{{ hebergement.nbrnuitehebergement }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ hebergement.disponibilitehebergement ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ hebergement.localisationhebergement }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ hebergement.prixhebergement }} DT</td>
            </tr>
        </tbody>
    </table>

    <div class="action-buttons">
        <a href="{{ path('app_hebergement_admin_index') }}" class="btn btn-secondary">⬅ Retour à la liste</a>
        <a href="{{ path('app_hebergement_admin_edit', {'idhebergement': hebergement.idhebergement}) }}" class="btn btn-primary">✏️ Modifier</a>
        {{ include('hebergement_admin/_delete_form.html.twig') }}
    </div>

    <style>
        .title {
            text-align: center;
            font-size: 28px;
            margin-bottom: 30px;
            color: #2c3e50;
        }

        .styled-table {
            width: 100%;
            max-width: 800px;
            margin: 0 auto 30px;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }

        .styled-table th, .styled-table td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .styled-table th {
            background-color: #f4f6f8;
            color: #34495e;
            font-weight: 600;
            width: 30%;
        }

        .styled-table td {
            color: #2c3e50;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 18px;
            font-size: 15px;
            font-weight: 500;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .btn-primary {
            background-color: #3d74b6;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #2c5f9e;
        }

        .btn-secondary {
            background-color: #bdc3c7;
            color: #2c3e50;
        }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }
    </style>
{% endblock %}
