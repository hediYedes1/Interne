{% extends 'base1.html.twig' %}

{% block title %}Liste des Hébergements{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-sm-flex justify-content-between align-items-center">
        <div>
          <h1 class="h2 text-primary fw-bold mb-0">Gestion des Hébergements</h1>
          <p class="text-muted">Consultez et gérez tous les hébergements disponibles</p>
        </div>
        <div class="d-flex gap-2">
          <a href="{{ path('app_affectation_admin_index') }}" class="btn btn-outline-primary">
            <i class="fas fa-calendar-check me-2"></i>Réservations
          </a>
          <a href="{{ path('app_hebergement_admin_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouveau Hébergement
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="stat-icon bg-light rounded-circle p-3 me-3">
              <i class="fas fa-home text-primary fa-lg"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Total Hébergements</h6>
              <h2 class="mb-0 fw-bold">{{ stats.total }}</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="stat-icon bg-light rounded-circle p-3 me-3">
              <i class="fas fa-check-circle text-success fa-lg"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Disponibles</h6>
              <h2 class="mb-0 fw-bold text-success">{{ stats.disponibles }}</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="stat-icon bg-light rounded-circle p-3 me-3">
              <i class="fas fa-tag text-primary fa-lg"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Prix Moyen</h6>
              <h2 class="mb-0 fw-bold">{{ stats.prixMoyen }} <small class="text-muted fs-6">TND</small></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-transparent border-0 pt-4 pb-0 px-4">
          <h5 class="mb-0">Répartition par Type</h5>
        </div>
        <div class="card-body p-4">
          <canvas id="chartTypeHebergement" height="250"></canvas>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-transparent border-0 pt-4 pb-0 px-4">
          <h5 class="mb-0">Disponibilité</h5>
        </div>
        <div class="card-body p-4">
          <canvas id="chartDisponibilite" height="250"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Table Card -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-transparent d-flex justify-content-between align-items-center p-4 border-0">
      <h5 class="mb-0">Liste des Hébergements</h5>
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-text bg-transparent border-end-0">
            <i class="fas fa-search text-muted"></i>
          </span>
          <input type="text" id="searchInput" class="form-control border-start-0 ps-0" 
                 placeholder="Rechercher..." onkeyup="filterTable()">
        </div>
      </div>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th class="px-4 py-3">Nom</th>
              <th class="px-4 py-3">Type</th>
              <th class="px-4 py-3">Adresse</th>
              <th class="px-4 py-3">Prix</th>
              <th class="px-4 py-3 text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for hebergement in hebergements %}
              <tr>
                <td class="px-4 py-3 fw-medium">{{ hebergement.nomhebergement }}</td>
                <td class="px-4 py-3">
                  <span class="badge rounded-pill bg-light text-dark">
                    {{ hebergement.typehebergement }}
                  </span>
                </td>
                <td class="px-4 py-3 text-muted small">{{ hebergement.adressehebergement }}</td>
                <td class="px-4 py-3 fw-medium">{{ hebergement.prixhebergement }} TND</td>
                <td class="px-4 py-3 text-end">
                  <div class="d-flex gap-1 justify-content-end">
                    <a href="{{ path('app_hebergement_admin_show', { idhebergement: hebergement.idhebergement }) }}" 
                       class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Voir">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_hebergement_admin_edit', { idhebergement: hebergement.idhebergement }) }}" 
                       class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip" title="Modifier">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" 
                            data-bs-target="#deleteModal{{ hebergement.idhebergement }}" title="Supprimer">
                      <i class="fas fa-trash"></i>
                    </button>
                    
                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal{{ hebergement.idhebergement }}" tabindex="-1" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Confirmer la suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer l'hébergement <strong>{{ hebergement.nomhebergement }}</strong> ?
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form method="post" action="{{ path('app_hebergement_admin_delete', {'idhebergement': hebergement.idhebergement}) }}">
                              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hebergement.idhebergement) }}">
                              <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="5" class="text-center py-5">
                  <div class="empty-state">
                    <i class="fas fa-home fa-3x text-muted mb-3"></i>
                    <h6>Aucun hébergement trouvé</h6>
                    <p class="text-muted small">Commencez par ajouter un nouvel hébergement</p>
                    <a href="{{ path('app_hebergement_admin_new') }}" class="btn btn-primary mt-2">
                      <i class="fas fa-plus me-2"></i>Ajouter un hébergement
                    </a>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    tooltipTriggerList.forEach(function(tooltipTriggerEl) {
      new bootstrap.Tooltip(tooltipTriggerEl, {
        boundary: document.body
      })
    });
    
    // Set chart defaults to improve performance
    Chart.defaults.font.family = "'Nunito', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif";
    Chart.defaults.responsive = true;
    Chart.defaults.maintainAspectRatio = false;
    Chart.defaults.plugins.tooltip.enabled = true;
    Chart.defaults.plugins.tooltip.backgroundColor = 'rgba(0, 0, 0, 0.7)';
    Chart.defaults.plugins.tooltip.padding = 10;
    Chart.defaults.plugins.tooltip.cornerRadius = 4;
    Chart.defaults.plugins.legend.display = true;
    Chart.defaults.plugins.legend.position = 'bottom';
    Chart.defaults.plugins.legend.labels.usePointStyle = true;
    Chart.defaults.plugins.legend.labels.padding = 20;
    Chart.defaults.animation.duration = 400; // Reduce animation time
    
    // Type chart with optimized options
    const typeCtx = document.getElementById('chartTypeHebergement').getContext('2d');
    const typeChart = new Chart(typeCtx, {
      type: 'doughnut',
      data: {
        labels: {{ types|json_encode|raw }},
        datasets: [{
          data: {{ counts|json_encode|raw }},
          backgroundColor: ['#4e73df', '#1cc88a', '#f6c23e', '#e74a3b'],
          borderWidth: 0,
          cutout: '70%',
          hoverOffset: 5
        }]
      },
      options: {
        layout: {
          padding: 10
        },
        animation: {
          animateRotate: true,
          animateScale: false // Disable scale animation to reduce shaking
        },
        plugins: {
          legend: {
            display: true
          }
        }
      }
    });
    
    // Availability chart with optimized options
    const dispoCtx = document.getElementById('chartDisponibilite').getContext('2d');
    const dispoChart = new Chart(dispoCtx, {
      type: 'pie',
      data: {
        labels: ['Disponibles', 'Non disponibles'],
        datasets: [{
          data: [{{ stats.disponibles }}, {{ stats.nonDisponibles }}],
          backgroundColor: ['#1cc88a', '#e74a3b'],
          borderWidth: 0,
          hoverOffset: 5
        }]
      },
      options: {
        layout: {
          padding: 10
        },
        animation: {
          animateRotate: true,
          animateScale: false // Disable scale animation to reduce shaking
        }
      }
    });
    
    // Prevent chart resizing on window resize to avoid shaking
    window.addEventListener('resize', function() {
      // Use debounce to prevent multiple rapid redraws
      clearTimeout(window.resizeChartTimer);
      window.resizeChartTimer = setTimeout(function() {
        typeChart.resize();
        dispoChart.resize();
      }, 200);
    });
  });
  
  // Table search function
  function filterTable() {
    const input = document.getElementById("searchInput");
    const filter = input.value.toLowerCase();
    const rows = document.querySelectorAll("table tbody tr");

    rows.forEach(row => {
      if (!row.querySelector('.empty-state')) {
        const cells = row.querySelectorAll("td");
        const rowText = Array.from(cells).map(td => td.textContent.toLowerCase()).join(" ");
        row.style.display = rowText.includes(filter) ? "" : "none";
      }
    });
  }
</script>

<style>
  .stat-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .table th {
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .badge {
    font-weight: 500;
    padding: 0.5em 0.85em;
  }
  
  /* Fix for chart shaking */
  canvas {
    width: 100% !important;
    height: 250px !important;
    min-height: 250px;
    max-height: 250px;
  }
  
  .card-body {
    position: relative;
    overflow: hidden;
  }
  
  /* Optimize rendering */
  .card {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
    will-change: transform;
  }
  
  /* Reduce layout shifts */
  .card-body canvas {
    display: block;
    margin: 0 auto;
  }
  
  /* Improve scrolling performance */
  .table-responsive {
    -webkit-overflow-scrolling: touch;
    overflow-y: hidden;
  }
</style>
{% endblock %}
