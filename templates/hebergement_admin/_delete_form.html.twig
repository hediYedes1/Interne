<form method="post"
      action="{{ path('app_hebergement_admin_delete', {'idhebergement': hebergement.idhebergement}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet hébergement ?');"
      style="display:inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hebergement.idhebergement) }}">
    <button class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Supprimer">
        🗑️
    </button>
</form>
