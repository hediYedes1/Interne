{% extends 'base.html.twig' %}
{% block title %}Détails du projet{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">{{ projet.titreprojet }}</h2>

    <p><strong>Description :</strong> {{ projet.descriptionprojet }}</p>
    <p><strong>Date début :</strong> {{ projet.datedebut|date('d/m/Y') }}</p>
    <p><strong>Date fin :</strong> {{ projet.datefin|date('d/m/Y') }}</p>

    <div class="d-flex gap-2 mt-4">
        <a href="{{ path('app_projet_edit', {'idprojet': projet.idprojet}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <form method="post" action="{{ path('app_projet_delete', {'idprojet': projet.idprojet}) }}" onsubmit="return confirm('Supprimer ce projet ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.idprojet) }}">
            <button class="btn btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
        </form>
        <a href="{{ path('app_projet_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}
