{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Détails du Projet</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Idprojet</th>
                    <td>{{ projet.idprojet }}</td>
                </tr>
                <tr>
                    <th>Titreprojet</th>
                    <td>{{ projet.titreprojet }}</td>
                </tr>
                <tr>
                    <th>Descriptionprojet</th>
                    <td>{{ projet.descriptionprojet }}</td>
                </tr>
                <tr>
                    <th>Datedebut</th>
                    <td>{{ projet.datedebut ? projet.datedebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Datefin</th>
                    <td>{{ projet.datefin ? projet.datefin|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <!-- Retour à la liste -->
            <a href="{{ path('app_projet_index') }}" class="btn btn-primary text-white">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <!-- Modifier -->
            <a href="{{ path('app_projet_edit', {'idprojet': projet.idprojet}) }}" class="btn btn-warning text-white">
                <i class="fas fa-edit"></i> Modifier
            </a>

            <!-- Créer une nouvelle offre -->
            <a href="{{ path('app_offre_new') }}" class="btn btn-success text-white">
                <i class="fas fa-plus-circle"></i> Créer une nouvelle offre
            </a>
        </div>

        <!-- Suppression -->
        <div class="mt-4">
            {{ include('projet/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
