{% extends 'base.html.twig' %}

{% block title %}Nouveau Projet{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0 text-center">Création d'un nouveau projet</h2>
                </div>
                
                <div class="card-body p-4">
                    {{ form_start(form, {
                        'attr': {
                            'class': 'needs-validation',
                            'novalidate': 'novalidate'
                        }
                    }) }}

                    {# Champ Titre #}
                    <div class="mb-4">
                        {{ form_label(form.titreprojet, 'Titre du projet*', {
                            'label_attr': {'class': 'form-label fw-bold'}
                        }) }}
                        {{ form_widget(form.titreprojet, {
                            'attr': {
                                'class': 'form-control' ~ (form.titreprojet.vars.valid ? '' : ' is-invalid'),
                                'placeholder': 'Nommez votre projet'
                            }
                        }) }}
                        {{ form_errors(form.titreprojet) }}
                    </div>

                    {# Champ Description #}
                    <div class="mb-4">
                        {{ form_label(form.descriptionprojet, 'Description', {
                            'label_attr': {'class': 'form-label fw-bold'}
                        }) }}
                        {{ form_widget(form.descriptionprojet, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 4,
                                'placeholder': 'Décrivez les objectifs du projet...'
                            }
                        }) }}
                        {{ form_errors(form.descriptionprojet) }}
                    </div>

                    {# Dates - en ligne #}
                    <div class="row g-3 mb-4">
                        {# Date de début - Aujourd'hui par défaut #}
                        <div class="col-md-6">
                            {{ form_label(form.datedebut, 'Date de début*', {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(form.datedebut, {
                                'attr': {
                                    'class': 'form-control' ~ (form.datedebut.vars.valid ? '' : ' is-invalid')
                                },
                                'data-date-format': 'DD/MM/YYYY',
                                'data-date-default-date': "now"|date("Y-m-d")
                            }) }}
                            {{ form_errors(form.datedebut) }}
                        </div>

                        {# Date de fin - Demain par défaut #}
                        <div class="col-md-6">
                            {{ form_label(form.datefin, 'Date de fin*', {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(form.datefin, {
                                'attr': {
                                    'class': 'form-control' ~ (form.datefin.vars.valid ? '' : ' is-invalid')
                                },
                                'data-date-format': 'DD/MM/YYYY',
                                'data-date-default-date': "+1 day"|date("Y-m-d")
                            }) }}
                            {{ form_errors(form.datefin) }}
                        </div>
                    </div>

                    {# Boutons d'action #}
                    <div class="d-flex justify-content-between mt-5">
                        <a href="{{ path('front_projet_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialiser les dates par défaut si le champ est vide
    const today = new Date();
    const tomorrow = new Date();
    tomorrow.setDate(today.getDate() + 1);
    
    const dateDebutField = document.getElementById('{{ form.datedebut.vars.id }}');
    const dateFinField = document.getElementById('{{ form.datefin.vars.id }}');
    
    if (dateDebutField && !dateDebutField.value) {
        dateDebutField.value = today.toISOString().split('T')[0];
    }
    
    if (dateFinField && !dateFinField.value) {
        dateFinField.value = tomorrow.toISOString().split('T')[0];
    }
});
</script>
{% endblock %}
{% endblock %}