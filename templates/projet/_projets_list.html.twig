{# templates/projet/_projets_list.html.twig #}
{% if projets|length > 0 %}
    {% for projet in projets %}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">{{ projet.titreprojet }}</h5>
                    <p class="card-text text-muted">{{ projet.descriptionprojet|length > 100 ? projet.descriptionprojet[:100] ~ '...' : projet.descriptionprojet }}</p>
                    <p><strong>Début :</strong> {{ projet.datedebut|date('d/m/Y') }} | <strong>Fin :</strong> {{ projet.datefin|date('d/m/Y') }}</p>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path(route_show, {'idprojet': projet.idprojet}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Voir Plus
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12">
        <div class="alert alert-info text-center">
            {% if searchQuery is defined and searchQuery %}
                Aucun projet trouvé pour "{{ searchQuery }}".
            {% else %}
                Aucun projet trouvé.
            {% endif %}
        </div>
    </div>
{% endif %}