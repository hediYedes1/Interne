{# templates/projet/_projets_list.html.twig #}
{% if projets|length > 0 %}
    {% for projet in projets %}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">{{ projet.titreprojet }}</h5>
                    <p class="card-text text-muted">{{ projet.descriptionprojet|length > 100 ? projet.descriptionprojet[:100] ~ '...' : projet.descriptionprojet }}</p>
                    <p><strong>Début :</strong> {{ projet.datedebut|date('d/m/Y') }} | <strong>Fin :</strong> {{ projet.datefin|date('d/m/Y') }}</p>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path(app.request.attributes.get('_route') == 'back_projet_index' ? 'back_projet_show' : 'front_projet_show', {'idprojet': projet.idprojet}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Voir Plus
                        </a>
                        <a href="{{ path(app.request.attributes.get('_route') == 'back_projet_index' ? 'back_projet_edit' : 'front_projet_edit', {'idprojet': projet.idprojet}) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <form method="post" action="{{ path(app.request.attributes.get('_route') == 'back_projet_index' ? 'back_projet_delete' : 'front_projet_delete', {'idprojet': projet.idprojet}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.idprojet) }}">
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12">
        <div class="alert alert-info text-center">
            {% if searchQuery is defined and searchQuery %}
                Aucun projet trouvé pour "{{ searchQuery }}".
            {% else %}
                Aucun projet trouvé.
            {% endif %}
        </div>
    </div>
{% endif %}