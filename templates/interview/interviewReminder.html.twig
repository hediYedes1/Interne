<li class="dropdown pc-h-item">
    <a class="pc-head-link dropdown-toggle arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
        <i class="ti ti-bell"></i>
        {% if notifications|length > 0 %}
            <span class="badge bg-danger pc-h-badge">{{ notifications|length }}</span>
        {% endif %}
    </a>
    <div class="dropdown-menu dropdown-notification dropdown-menu-end pc-h-dropdown">
        <div class="dropdown-header d-flex align-items-center justify-content-between">
            <h5 class="m-0">Notifications</h5>
            <a href="{{ path('clear_notifications') }}" class="pc-head-link bg-transparent">
                <i class="ti ti-x text-danger"></i>
            </a>
        </div>
        <div class="dropdown-divider"></div>
        <div class="dropdown-header px-0 text-wrap header-notification-scroll position-relative" style="max-height: calc(100vh - 215px)">
            <div class="list-group list-group-flush w-100">
                {% if notifications|length > 0 %}
                    {% for notification in notifications %}
                        <a class="list-group-item list-group-item-action">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ti ti-calendar-event text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ms-1">
                                    <span class="float-end text-muted">{{ notification.created_at|date('H:i') }}</span>
                                    <p class="text-body mb-1">{{ notification.message }}</p>
                                    <span class="text-muted">Interview #{{ notification.interview_id }}</span>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <div class="list-group-item list-group-item-action">
                        <div class="text-center py-3">
                            <p class="text-muted mb-0">Aucune notification</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="text-center py-2">
            <a href="{{ path('app_interview_index') }}" class="link-primary">Voir toutes les interviews</a>
        </div>
    </div>
</li>