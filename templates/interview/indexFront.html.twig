{% extends 'base.html.twig' %}

{% block title %}Gestion des Interviews{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    :root {
      --primary: #4e73df;
      --primary-light: #e8f1ff;
      --secondary: #858796;
      --success: #1cc88a;
      --info: #36b9cc;
      --warning: #f6c23e;
      --danger: #e74a3b;
      --light: #f8f9fc;
      --dark: #5a5c69;
      --border: #e3e6f0;
    }

    /* Layout */
    .interview-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    /* Header */
    .page-header {
      display: flex;
      flex-direction: column;
      margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
      .page-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }

    .page-title {
      color: var(--dark);
      font-weight: 600;
      margin-bottom: 1rem;
    }

    /* Search Form */
    .search-form {
      background: white;
      padding: 1.5rem;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
      margin-bottom: 2rem;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
      .form-inline {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      
      .form-group {
        margin-bottom: 0;
        flex: 1;
      }
    }

    .form-control {
      border: 1px solid var(--border);
      border-radius: 0.35rem;
      padding: 0.5rem 1rem;
      width: 100%;
    }

    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem 1.25rem;
      border-radius: 0.35rem;
      font-weight: 500;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
    }

    .btn i {
      margin-right: 0.5rem;
    }

    .btn-primary {
      background-color: var(--primary);
      color: white;
    }

    .btn-secondary {
      background-color: var(--secondary);
      color: white;
    }

    .btn-primary:hover {
      background-color: #3a5bbf;
      transform: translateY(-1px);
      box-shadow: 0 0.25rem 0.5rem rgba(58, 91, 191, 0.3);
    }

    .btn-secondary:hover {
      background-color: #6c757d;
      transform: translateY(-1px);
    }

    /* Cards */
    .interview-card {
      background: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
      border-left: 4px solid var(--primary);
    }

    .interview-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0.5rem 1.5rem rgba(58, 59, 69, 0.2);
    }

    .card-header {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--border);
      position: relative;
    }

    .card-title {
      font-weight: 600;
      color: var(--dark);
      margin: 0;
      padding-right: 2rem;
    }

    .card-badge {
      position: absolute;
      top: 1.25rem;
      right: 1.5rem;
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
      border-radius: 2rem;
      font-weight: 500;
    }

    .badge-online {
      background-color: var(--primary-light);
      color: var(--primary);
      border: 1px solid var(--primary);
    }

    .badge-inperson {
      background-color: rgba(28, 200, 138, 0.1);
      color: var(--success);
      border: 1px solid var(--success);
    }

    .card-body {
      padding: 1.5rem;
      flex: 1;
    }

    .card-footer {
      padding: 1rem 1.5rem;
      border-top: 1px dashed var(--border);
    }

    /* Details */
    .detail-item {
      display: flex;
      margin-bottom: 1rem;
    }

    .detail-icon {
      width: 1.5rem;
      color: var(--primary);
      margin-right: 1rem;
      text-align: center;
    }

    .detail-label {
      font-size: 0.8rem;
      color: var(--secondary);
      margin-bottom: 0.25rem;
    }

    .detail-value {
      font-weight: 500;
      color: var(--dark);
    }

    .meet-link {
      display: inline-flex;
      align-items: center;
      color: var(--primary);
      font-weight: 500;
    }

    .meet-link i {
      margin-right: 0.5rem;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .action-btn {
      flex: 1;
      min-width: 120px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem 1rem;
      border-radius: 0.35rem;
      font-size: 0.85rem;
      font-weight: 500;
      transition: all 0.2s;
    }

    .action-btn i {
      margin-right: 0.5rem;
      font-size: 0.9em;
    }

    .btn-view {
      background-color: var(--primary);
      color: white;
    }

    .btn-tests {
      background-color: var(--info);
      color: white;
    }

    .btn-join {
      background-color: var(--success);
      color: white;
    }

    .action-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
      opacity: 0.9;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 3rem;
      background-color: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .empty-state i {
      font-size: 3rem;
      color: var(--border);
      margin-bottom: 1.5rem;
    }

    .empty-state h4 {
      color: var(--dark);
      margin-bottom: 1rem;
    }

    .empty-state p {
      color: var(--secondary);
      margin-bottom: 1.5rem;
    }

    /* Results Info */
    .results-info {
      background-color: white;
      border-radius: 0.5rem;
      padding: 1rem 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }
  </style>
{% endblock %}

{% block body %}
  <div class="interview-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Gestion des Interviews</h1>
    </div>

    <!-- Search Form -->
    <div class="search-form">
      <form method="get" action="{{ path('app_interview_index_front') }}" class="form-inline">
        <div class="form-group">
          <input type="text" name="titreoffre" class="form-control" placeholder="Rechercher par titre"
                 value="{{ app.request.get('titreoffre') }}">
        </div>
        
        <div class="form-group">
          <select name="typeinterview" class="form-control">
            <option value="">Tous les types</option>
            <option value="ENLIGNE" {{ app.request.get('typeinterview') == 'ENLIGNE' ? 'selected' : '' }}>En ligne</option>
            <option value="ENPERSONNE" {{ app.request.get('typeinterview') == 'ENPERSONNE' ? 'selected' : '' }}>En personne</option>
          </select>
        </div>
        
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i> Rechercher
        </button>
        
        <a href="{{ path('app_interview_index_front') }}" class="btn btn-secondary">
          <i class="fas fa-undo"></i> Réinitialiser
        </a>
      </form>
    </div>

    <!-- Results Info -->
    {% if app.request.get('titreoffre') or app.request.get('typeinterview') %}
      <div class="results-info alert alert-info">
        Résultats pour: 
        {% if app.request.get('titreoffre') %}
          <strong>"{{ app.request.get('titreoffre') }}"</strong>
        {% endif %}
        {% if app.request.get('typeinterview') %}
          {% if app.request.get('titreoffre') %} | {% endif %}
          Type: <strong>{{ app.request.get('typeinterview') == 'ENLIGNE' ? 'En ligne' : 'En personne' }}</strong>
        {% endif %}
        ({{ interviews|length }} résultat(s) trouvé(s))
      </div>
    {% endif %}

    <!-- Interview Cards -->
    <div class="row">
      {% if interviews|length > 0 %}
        {% for interview in interviews %}
          <div class="col-lg-6 col-xl-4 mb-4">
            <div class="interview-card">
              <div class="card-header">
                <h3 class="card-title">{{ interview.titreoffre }}</h3>
                <span class="card-badge {{ interview.typeinterview.value == 'ENLIGNE' ? 'badge-online' : 'badge-inperson' }}">
                  {{ interview.typeinterview.value == 'ENLIGNE' ? 'En ligne' : 'En personne' }}
                </span>
              </div>
              
              <div class="card-body">
                <div class="detail-item">
                  <div class="detail-icon">
                    <i class="fas fa-calendar-alt"></i>
                  </div>
                  <div>
                    <div class="detail-label">Date</div>
                    <div class="detail-value">
                      {{ interview.dateinterview ? interview.dateinterview|date('d/m/Y') : 'Non spécifiée' }}
                    </div>
                  </div>
                </div>
                
                <div class="detail-item">
                  <div class="detail-icon">
                    <i class="fas fa-clock"></i>
                  </div>
                  <div>
                    <div class="detail-label">Heure</div>
                    <div class="detail-value">
                      {{ interview.timeinterview ? interview.timeinterview|date('H:i') : 'Non spécifiée' }}
                    </div>
                  </div>
                </div>
                
                {% if interview.typeinterview.value == 'ENLIGNE' %}
                  <div class="detail-item">
                    <div class="detail-icon">
                      <i class="fas fa-video"></i>
                    </div>
                    <div>
                      <div class="detail-label">Lien de la réunion</div>
                      <div class="detail-value">
                        {% if interview.lienmeet %}
                          <a href="{{ interview.lienmeet }}" target="_blank" class="meet-link">
                            <i class="fas fa-external-link-alt"></i> Rejoindre
                          </a>
                        {% else %}
                          <span class="text-muted">Non fourni</span>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% else %}
                  <div class="detail-item">
                    <div class="detail-icon">
                      <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                      <div class="detail-label">Localisation</div>
                      <div class="detail-value">
                        {{ interview.localisation ? interview.localisation : 'Non spécifiée' }}
                      </div>
                    </div>
                  </div>
                {% endif %}
              </div>
              
              <div class="card-footer">
                <div class="action-buttons">
                  <a href="{{ path('app_interview_show_front', {'idinterview': interview.idinterview}) }}" 
                     class="action-btn btn-view">
                    <i class="fas fa-eye"></i> Détails
                  </a>
                  
                  <a href="{{ path('app_testtechnique_by_interview_front', {'idinterview': interview.idinterview}) }}" 
                     class="action-btn btn-tests">
                    <i class="fas fa-clipboard-check"></i> Tests
                  </a>
                  
                  {% if interview.typeinterview.value == 'ENLIGNE' and interview.lienmeet %}
                    <a href="{{ interview.lienmeet }}" target="_blank" 
                       class="action-btn btn-join">
                      <i class="fas fa-video"></i> Rejoindre
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="col-12">
          <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <h4>Aucune interview trouvée</h4>
            <p>Il n'y a actuellement aucune interview programmée correspondant à vos critères.</p>
            <a href="{{ path('app_interview_index_front') }}" class="btn btn-primary">
              <i class="fas fa-undo"></i> Réinitialiser la recherche
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block js %}
  {{ parent() }}
  <script>
    $(document).ready(function() {
      // Réappliquer les filtres après le chargement de la page
      $('input[name="titreoffre"]').val("{{ app.request.get('titreoffre') }}");
      $('select[name="typeinterview"]').val("{{ app.request.get('typeinterview') }}");
      
      // Animation des cartes
      $('.interview-card').hide().each(function(i) {
        $(this).delay(i * 100).fadeIn(300);
      });
    });
  </script>
{% endblock %}