{% extends 'base1.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Réservations</h1>
    
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <p class="mb-0"><i class="fas fa-info-circle me-2"></i> Consultez et gérez toutes vos réservations d'hébergements</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for affectationhebergement in affectationhebergements %}
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-header bg-transparent">
                        <span class="badge {% if affectationhebergement.datedebut < "now"|date("Y-m-d") %}bg-danger{% else %}bg-success{% endif %} float-end">
                            {% if affectationhebergement.datedebut < "now"|date("Y-m-d") %}Passée{% else %}Active{% endif %}
                        </span>
                        <h5 class="mb-0">Réservation #{{ loop.index }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-home text-primary me-2"></i>
                            <h6 class="mb-0">{{ affectationhebergement.idhebergement.nomhebergement }}</h6>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                <small class="text-muted">Date début:</small>
                                <p class="mb-0 fw-bold">{{ affectationhebergement.datedebut ? affectationhebergement.datedebut|date('d/m/Y') : '' }}</p>
                            </div>
                            <div>
                                <small class="text-muted">Date fin:</small>
                                <p class="mb-0 fw-bold">{{ affectationhebergement.datefin ? affectationhebergement.datefin|date('d/m/Y') : '' }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_affectation_admin_show', {'id': affectationhebergement.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i> Détails
                            </a>
                            <a href="{{ path('app_affectation_admin_edit', {'id': affectationhebergement.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center p-4">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <p class="mb-0">Aucune réservation trouvée.</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
