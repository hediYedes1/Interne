{% extends 'base1.html.twig' %}

{% block title %}Détails de l'affectation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card affectation-detail-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h3 mb-0">
                                <i class="fas fa-building-user me-2"></i>
                                Détails de l'affectation d'hébergement
                            </h1>
                            <span class="badge bg-primary">ID: {{ affectationhebergement.id }}</span>
                        </div>
                    </div>
                    
                    <div class="card-body p-0">
                        <div class="affectation-info-header">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="mb-1">{{ affectationhebergement.idhebergement.nomhebergement }}</h5>
                                    <p class="text-muted mb-0">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        {% if affectationhebergement.idhebergement.adressehebergement is defined %}
                                            {{ affectationhebergement.idhebergement.adressehebergement }}
                                        {% else %}
                                            Adresse non spécifiée
                                        {% endif %}
                                    </p>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <div class="affectation-status">
                                        {% set today = "now"|date('Y-m-d') %}
                                        {% set startDate = affectationhebergement.datedebut|date('Y-m-d') %}
                                        {% set endDate = affectationhebergement.datefin|date('Y-m-d') %}
                                        
                                        {% if today < startDate %}
                                            <span class="badge bg-warning">À venir</span>
                                        {% elseif today > endDate %}
                                            <span class="badge bg-secondary">Terminée</span>
                                        {% else %}
                                            <span class="badge bg-success">En cours</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="affectation-details">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-group">
                                        <label><i class="fas fa-calendar-alt me-2"></i>Période</label>
                                        <div class="detail-value">
                                            <div class="date-range">
                                                <div class="date-item">
                                                    <span class="date-label">Début:</span>
                                                    <span class="date-value">{{ affectationhebergement.datedebut ? affectationhebergement.datedebut|date('d M Y') : '—' }}</span>
                                                </div>
                                                <div class="date-separator">
                                                    <i class="fas fa-arrow-right"></i>
                                                </div>
                                                <div class="date-item">
                                                    <span class="date-label">Fin:</span>
                                                    <span class="date-value">{{ affectationhebergement.datefin ? affectationhebergement.datefin|date('d M Y') : '—' }}</span>
                                                </div>
                                            </div>
                                            
                                            {% if affectationhebergement.datedebut and affectationhebergement.datefin %}
                                                {% set diff = date(affectationhebergement.datefin).diff(date(affectationhebergement.datedebut)) %}
                                                <div class="duration-badge">
                                                    <i class="fas fa-clock me-1"></i>
                                                    {{ diff.days }} jour(s)
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    {% if affectationhebergement.idutilisateur is defined %}
                                    <div class="detail-group">
                                        <label><i class="fas fa-user me-2"></i>Utilisateur</label>
                                        <div class="detail-value">
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    <span>{{ affectationhebergement.idutilisateur.prenomutilisateur|slice(0, 1) }}{{ affectationhebergement.idutilisateur.nomutilisateur|slice(0, 1) }}</span>
                                                </div>
                                                <div class="user-details">
                                                    <div class="user-name">{{ affectationhebergement.idutilisateur.nomutilisateur }} {{ affectationhebergement.idutilisateur.prenomutilisateur }}</div>
                                                    {% if affectationhebergement.idutilisateur.emailutilisateur is defined %}
                                                        <div class="user-email">{{ affectationhebergement.idutilisateur.emailutilisateur }}</div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {% if affectationhebergement.commentaire is defined %}
                            <div class="row mt-3">
                                <div class="col-12">
                                    <div class="detail-group">
                                        <label><i class="fas fa-comment me-2"></i>Commentaire</label>
                                        <div class="detail-value">
                                            <div class="comment-box">
                                                {{ affectationhebergement.commentaire|default('Aucun commentaire') }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_affectation_admin_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                            <div class="d-flex">
                                <a href="{{ path('app_affectation_admin_edit', {'id': affectationhebergement.id}) }}" class="btn btn-primary me-2">
                                    <i class="fas fa-edit me-2"></i>Modifier
                                </a>
                                {{ include('affectation_admin/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if affectationhebergement.idhebergement.prixhebergement is defined %}
                <div class="card mt-4 pricing-card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-money-bill me-2"></i>Informations de paiement</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="price-detail">
                                    <span class="price-label">Prix par jour:</span>
                                    <span class="price-value">{{ affectationhebergement.idhebergement.prixhebergement|default(0) }} TND</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                {% if affectationhebergement.datedebut and affectationhebergement.datefin %}
                                    {% set diff = date(affectationhebergement.datefin).diff(date(affectationhebergement.datedebut)) %}
                                    {% set totalPrice = diff.days * affectationhebergement.idhebergement.prixhebergement|default(0) %}
                                    <div class="price-detail total-price">
                                        <span class="price-label">Prix total:</span>
                                        <span class="price-value">{{ totalPrice }} TND</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <style>
        .affectation-detail-card {
            border: none;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
            border-radius: 0.75rem;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .affectation-detail-card .card-header {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            padding: 1.25rem 1.5rem;
            border-bottom: none;
        }
        
        .affectation-info-header {
            background-color: #f8f9fc;
            padding: 1.5rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .affectation-details {
            padding: 1.5rem;
        }
        
        .detail-group {
            margin-bottom: 1.25rem;
        }
        
        .detail-group label {
            display: block;
            color: #5a5c69;
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .detail-value {
            background-color: #f8f9fc;
            border: 1px solid #e3e6f0;
            border-radius: 0.5rem;
            padding: 1rem;
        }
        
        .date-range {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
        }
        
        .date-item {
            flex: 1;
            min-width: 120px;
        }
        
        .date-separator {
            padding: 0 0.75rem;
            color: #b7b9cc;
        }
        
        .date-label {
            display: block;
            font-size: 0.75rem;
            color: #858796;
        }
        
        .date-value {
            font-weight: 600;
            color: #4e73df;
        }
        
        .duration-badge {
            display: inline-block;
            margin-top: 0.75rem;
            padding: 0.25rem 0.75rem;
            background-color: #eaecf4;
            border-radius: 1rem;
            font-size: 0.75rem;
            color: #5a5c69;
        }
        
        .user-info {
            display: flex;
            align-items: center;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #4e73df;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 1rem;
        }
        
        .user-name {
            font-weight: 600;
            color: #3a3b45;
        }
        
        .user-email {
            font-size: 0.875rem;
            color: #858796;
        }
        
        .comment-box {
            min-height: 60px;
            white-space: pre-line;
        }
        
        .card-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            padding: 1.25rem 1.5rem;
        }
        
        .pricing-card {
            border: none;
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.1);
            border-radius: 0.75rem;
        }
        
        .pricing-card .card-title {
            color: #4e73df;
            font-size: 1.1rem;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .price-detail {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }
        
        .price-label {
            color: #5a5c69;
            font-weight: 500;
        }
        
        .price-value {
            font-weight: 600;
            color: #3a3b45;
        }
        
        .total-price .price-value {
            color: #4e73df;
            font-size: 1.1rem;
        }
        
        .affectation-status {
            margin-top: 0.5rem;
        }
        
        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 500;
            font-size: 0.75rem;
            border-radius: 0.5rem;
        }
        
        @media (max-width: 767.98px) {
            .affectation-info-header .col-md-4 {
                text-align: left !important;
                margin-top: 0.75rem;
            }
            
            .card-footer .d-flex {
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .card-footer .btn {
                width: 100%;
            }
        }
    </style>
{% endblock %}
