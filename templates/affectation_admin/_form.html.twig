{{ form_start(form, {'attr': {'class': 'custom-affectation-form'}}) }}

    <div class="form-header">
        <h3>Détails de l'affectation</h3>
        <p class="form-subtitle">Veuillez remplir tous les champs obligatoires</p>
    </div>

    <div class="form-group">
        <div class="input-icon-group">
            <i class="ti ti-calendar-event"></i>
            {{ form_label(form.datedebut) }}
            {{ form_widget(form.datedebut) }}
            <div class="form-error">{{ form_errors(form.datedebut) }}</div>
            <small class="form-text text-muted">Date de début de l'affectation</small>
        </div>
    </div>

    <div class="form-group">
        <div class="input-icon-group">
            <i class="ti ti-calendar-off"></i>
            {{ form_label(form.datefin) }}
            {{ form_widget(form.datefin) }}
            <div class="form-error">{{ form_errors(form.datefin) }}</div>
            <small class="form-text text-muted">Date de fin prévue</small>
        </div>
    </div>

    <div class="form-group">
        <div class="input-icon-group">
            <i class="ti ti-building"></i>
            {{ form_label(form.idhebergement) }}
            {{ form_widget(form.idhebergement) }}
            <div class="form-error">{{ form_errors(form.idhebergement) }}</div>
            <small class="form-text text-muted">Sélectionnez l'hébergement concerné</small>
        </div>
    </div>

    {% if form.getIdutilisateur is defined %}
    <div class="form-group">
        <div class="input-icon-group">
            <i class="ti ti-user"></i>
            {{ form_label(form.getIdutilisateur) }}
            {{ form_widget(form.getIdutilisateur) }}
            <div class="form-error">{{ form_errors(form.getIdutilisateur) }}</div>
            <small class="form-text text-muted">Sélectionnez l'utilisateur à affecter</small>
        </div>
    </div>
    {% endif %}

    <div class="form-actions">
        <button class="btn btn-primary mt-3">
            <i class="ti ti-device-floppy"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="#" class="btn btn-light mt-3">Annuler</a>
    </div>

{{ form_end(form) }}

