        padding: 10px 20px;
        font-weight: 600;
    }
    
    .nav-tabs .nav-link.active {
        color: #1977cc;
        border-bottom: 3px solid #1977cc;
        background: transparent;
    }
    
    .tab-content {
        padding: 20px 0;
    }
</style>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script>
    $(document).ready(function() {
        // Profile image upload handling
        // Profile image upload handling
        $('#profile-image-input').change(function() {
                if (this.files && this.files[0]) {
                    // Preview the image temporarily
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#profile-preview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                    
                    // Submit via AJAX
                    var formData = new FormData($('#profile-image-form')[0]);
                    
                    $.ajax({
                        url: $('#profile-image-form').attr('action'),
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(response) {
                            toastr.success(response.message);
                            // Update the image source with the new filename
                            if (response.success && response.newFilename) {
                                var newImageUrl = '{{ asset('uploads/profile_images/') }}' + response.newFilename + '?t=' + new Date().getTime();
                                $('#profile-preview').attr('src', newImageUrl);
                            }
                        },
                        error: function(xhr) {
                            try {
                                var errorResponse = JSON.parse(xhr.responseText);
                                toastr.error(errorResponse.message || 'Erreur lors du téléchargement');
                                // Reset to default image on error
                                $('#profile-preview').attr('src', '{{ asset('img/default-profile.jpg') }}');
                            } catch (e) {
                                toastr.error('Une erreur est survenue');
                            }
                        }
                    });
                }
            });
        
        // Form submission handling
        $('#personal-info-form, #security-form').submit(function(e) {
            e.preventDefault();
            var form = $(this);
            
            $.ajax({
                url: form.attr('action'),
                type: form.attr('method'),
                data: form.serialize(),
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        if (form.attr('id') === 'personal-info-form') {
                            // Update displayed name if personal info was updated
                            $('.profile-info h3').text(
                                $('#nomutilisateur').val() + ' ' + $('#prenomutilisateur').val()
                            );
                        }
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function(xhr) {
                    try {
                        var errorResponse = JSON.parse(xhr.responseText);
                        toastr.error(errorResponse.message || 'Une erreur est survenue');
                    } catch (e) {
                        toastr.error('Une erreur est survenue');
                    }
                }
            });
        });
    });
</script>
{% endblock %}