{% extends 'base1.html.twig' %}

{% block body %}
<!-- Start Breadcrumbs -->
<section class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Profile Utilisateur</h2>
                <ul class="bread-list">
                    <li><a href="{{ path('app_base2') }}">Accueil<i class="fa fa-angle-right"></i></a></li>
                    <li class="active"><a href="{{ path('app_profile') }}">Profile</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--/ End Breadcrumbs -->

<!-- Start Profile Area -->
<section class="profile section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-12">
                <!-- Profile Sidebar -->
                <div class="profile-sidebar">
                    <div class="profile-image">
                        <img id="profile-preview" src="{{ app.user.profilepictureurl ? asset('uploads/profile_images/' ~ app.user.profilepictureurl) : asset('img/default-profile.jpg') }}" alt="Profile Image" class="img-fluid">
                        <div class="image-upload mt-3">
                            <form id="profile-image-form" action="{{ path('update_profile_image') }}" method="post" enctype="multipart/form-data">
                                <label for="profile-image-input" class="btn btn-primary">
                                    <i class="fa fa-camera"></i> Changer la photo
                                </label>
                                <input type="file" id="profile-image-input" name="profile_image" accept="image/*" style="display: none;">
                            </form>
                        </div>
                    </div>
                    <div class="profile-info mt-4">
                        <h3>{{ app.user.nomutilisateur }} {{ app.user.prenomutilisateur }}</h3>
                        <p class="text-muted">{{ app.user.emailutilisateur }}</p>
                        <div class="profile-stats mt-3">
                            <div class="stat-item">
                                <i class="icofont-ui-calendar"></i>
                                <span>Âge: {{ app.user.ageutilisateur }} ans</span>
                            </div>
                            <div class="stat-item">
                                <i class="icofont-badge"></i>
                                <span>Rôle: {{ app.user.role.value }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/ End Profile Sidebar -->
            </div>
            
            <div class="col-lg-8 col-md-6 col-12">
                <!-- Profile Content -->
                <div class="profile-content">
                    <div class="profile-tabs">
                        <ul class="nav nav-tabs" id="profileTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab">Informations Personnelles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="security-tab" data-toggle="tab" href="#security" role="tab">Sécurité</a>
                            </li>
                        </ul>
                        
                        <div class="tab-content" id="profileTabContent">
                            <!-- Personal Info Tab -->
                            <div class="tab-pane fade show active" id="info" role="tabpanel">
                                <form id="personal-info-form" action="{{ path('update_profile') }}" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="nomutilisateur">Nom</label>
                                                <input type="text" class="form-control" id="nomutilisateur" name="nomutilisateur" value="{{ app.user.nomutilisateur }}" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="prenomutilisateur">Prénom</label>
                                                <input type="text" class="form-control" id="prenomutilisateur" name="prenomutilisateur" value="{{ app.user.prenomutilisateur }}" required>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="emailutilisateur">Email</label>
                                                <input type="email" class="form-control" id="emailutilisateur" name="emailutilisateur" value="{{ app.user.emailutilisateur }}" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="ageutilisateur">Âge</label>
                                                <input type="number" class="form-control" id="ageutilisateur" name="ageutilisateur" value="{{ app.user.ageutilisateur }}" min="16" max="100" required>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                                </form>
                            </div>
                            
                            <!-- Security Tab -->
                            <div class="tab-pane fade" id="security" role="tabpanel">
                                <form id="security-form" action="{{ path('update_password') }}" method="post">
                                    <div class="form-group">
                                        <label for="current_password">Mot de passe actuel</label>
                                        <input type="password" class="form-control" id="current_password" name="current_password" required>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="new_password">Nouveau mot de passe</label>
                                        <input type="password" class="form-control" id="new_password" name="new_password" required>
                                        <small class="form-text text-muted">Minimum 8 caractères avec au moins une lettre majuscule, une minuscule et un chiffre.</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="confirm_password">Confirmer le nouveau mot de passe</label>
                                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/ End Profile Content -->
            </div>
        </div>
    </div>
</section>
<!--/ End Profile Area -->
{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<style>
    /* Profile Specific Styles */
    .breadcrumbs {
        padding: 20px 0;
        background-color: #f8f9fa;
        margin-bottom: 30px;
    }
    
    .bread-list {
        list-style: none;
        padding: 0;
        margin: 10px 0 0;
    }
    
    .bread-list li {
        display: inline;
        margin-right: 5px;
    }
    
    .bread-list li a {
        color: #666;
    }
    
    .bread-list li.active a {
        color: #1977cc;
    }
    
    .profile-sidebar {
        background: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        text-align: center;
    }
    
    .profile-image {
        margin-bottom: 15px;
    }
    
    .profile-image img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #f1f1f1;
    }
    
    .profile-info h3 {
        margin-bottom: 5px;
        color: #2c4964;
    }
    
