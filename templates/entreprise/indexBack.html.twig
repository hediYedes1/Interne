{% extends 'base1.html.twig' %}

{% block title %}Branches Associées{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre de la page -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Vos Branches</h1>
    </div>

    <!-- Affichage des branches -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-code-branch"></i> Branches Associées
            </h6>
        </div>
        <div class="card-body">
            {% if branches|length > 0 %}
                <ul class="list-group">
                    {% for branche in branches %}
                        <li class="list-group-item">
                            <strong>Nom :</strong> {{ branche.nombranche }}<br>
                            <strong>Localisation :</strong> {{ branche.localisationbranche }}<br>
                            <strong>Email :</strong> {{ branche.emailbranche }}<br>
                            <strong>Contact :</strong> {{ branche.contactbranche }}
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucune branche associée.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}