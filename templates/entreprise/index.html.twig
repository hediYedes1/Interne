{% extends 'base1.html.twig' %}

{% block title %}Liste des Entreprises{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre de la page et bouton "Créer" -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Gestion des Entreprises</h1>
        <a href="{{ path('app_entreprise_new') }}" class="btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 mr-2"></i>Créer une nouvelle entreprise
        </a>
    </div>

    <!-- Formulaire de recherche et tri -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Recherche et tri</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="search" class="form-label">Recherche</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" 
                               id="search"
                               name="search" 
                               class="form-control" 
                               placeholder="Rechercher par nom ou secteur..." 
                               value="{{ search }}">
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="sort" class="form-label">Critère de tri</label>
                    <select id="sort" name="sort" class="form-select">
                        <option value="nomentreprise" {{ sortBy == 'nomentreprise' ? 'selected' : '' }}>Trier par nom</option>
                        <option value="secteurentreprise" {{ sortBy == 'secteurentreprise' ? 'selected' : '' }}>Trier par secteur</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="order" class="form-label">Ordre de tri</label>
                    <select id="order" name="order" class="form-select">
                        <option value="asc" {{ sortOrder == 'asc' ? 'selected' : '' }}>Croissant</option>
                        <option value="desc" {{ sortOrder == 'desc' ? 'selected' : '' }}>Décroissant</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Appliquer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tableau des entreprises -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Liste des entreprises</h6>
            <span class="badge badge-primary">{{ entreprises|length }} total</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Logo</th>
                            <th>Site Web</th>
                            <th>Secteur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entreprise in entreprises %}
                            <tr>
                                <td>{{ entreprise.identreprise }}</td>
                                <td>{{ entreprise.nomentreprise }}</td>
                                <td>{{ entreprise.descriptionentreprise }}</td>
                                <td>
                                    {% if entreprise.logoentreprise %}
                                        <img src="{{ asset('uploads/logos/' ~ entreprise.logoentreprise) }}" alt="Logo" width="60" height="60" class="rounded-circle">
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if entreprise.urlentreprise %}
                                        <a href="{{ entreprise.urlentreprise }}" target="_blank">{{ entreprise.urlentreprise }}</a>
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ entreprise.secteurentreprise }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_entreprise_show_back', {'identreprise': entreprise.identreprise}) }}" class="btn btn-sm btn-primary" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_entreprise_edit', {'identreprise': entreprise.identreprise}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_brancheentreprise_new', {'id': entreprise.identreprise}) }}" class="btn btn-sm btn-success" title="Associer une branche">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a href="{{ path('app_departmententreprise_new', {'id': entreprise.identreprise}) }}" class="btn btn-sm btn-info" title="associer un departement">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle fa-2x mb-2"></i><br>
                                    Aucune entreprise trouvée.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
