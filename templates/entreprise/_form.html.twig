{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Informations de l'Entreprise</h5>
    </div>
    <div class="card-body">
        <!-- Identifiant et Nom de l'entreprise -->
        <div class="form-group row">
           
            <div class="col-md-6 mb-3">
                {{ form_label(form.nomentreprise, 'Nom de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomentreprise, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomentreprise) }}
            </div>
        </div>

        <!-- Description et Logo -->
        <div class="form-group row">
            <div class="col-md-12 mb-3">
                {{ form_label(form.descriptionentreprise, 'Description de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descriptionentreprise, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                {{ form_errors(form.descriptionentreprise) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.logoentreprise, 'Logo de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.logoentreprise, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.logoentreprise) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.urlentreprise, 'URL de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.urlentreprise, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.urlentreprise) }}
            </div>
        </div>

        <!-- Secteur de l'Entreprise -->
        <div class="form-group row">
            <div class="col-md-12 mb-3">
                {{ form_label(form.secteurentreprise, 'Secteur de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.secteurentreprise, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.secteurentreprise) }}
            </div>
        </div>

        <!-- Boutons de soumission -->
        <div class="form-group text-right mt-4">
            <button type="submit" class="btn btn-primary">
                {{ button_label|default('Enregistrer') }}
            </button>
            <a href="{{ path('app_entreprise_index') }}" class="btn btn-secondary ml-2">
                Annuler
            </a>
        </div>
    </div>
</div>

{{ form_end(form) }}
