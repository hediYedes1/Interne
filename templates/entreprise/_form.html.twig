{{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Informations de l'Entreprise</h5>
    </div>
    <div class="card-body">

        <!-- Nom de l'entreprise -->
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.nomentreprise, 'Nom de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomentreprise, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.nomentreprise.vars.valid is same as(true) ? ' is-valid' : (form.nomentreprise.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'required': 'required',
                        'minlength': '3',
                        'maxlength': '100',
                        'pattern': '[A-Za-z0-9À-ÿ\s\.\'\,\-]+',
                        'title': 'Le nom doit contenir entre 3 et 100 caractères (lettres, chiffres, espaces, ponctuation).'
                    }
                }) }}
                {{ form_errors(form.nomentreprise) }}
            </div>
        </div>

        <!-- Description -->
        <div class="form-group row">
            <div class="col-md-12 mb-3">
                {{ form_label(form.descriptionentreprise, 'Description de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descriptionentreprise, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.descriptionentreprise.vars.valid is same as(true) ? ' is-valid' : (form.descriptionentreprise.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'rows': 4,
                        'maxlength': '500',
                        'title': 'Maximum 500 caractères.'
                    }
                }) }}
                {{ form_errors(form.descriptionentreprise) }}
            </div>
        </div>

        <!-- Logo et URL -->
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.logoentreprise, 'Logo de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.logoentreprise, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.logoentreprise.vars.valid is same as(true) ? ' is-valid' : (form.logoentreprise.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'accept': 'image/png,image/jpeg,image/jpg',
                        'title': 'Formats acceptés : PNG, JPG, JPEG.'
                    }
                }) }}
                {{ form_errors(form.logoentreprise) }}
            </div>

            <div class="col-md-6 mb-3">
                {{ form_label(form.urlentreprise, 'URL de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.urlentreprise, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.urlentreprise.vars.valid is same as(true) ? ' is-valid' : (form.urlentreprise.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'type': 'url',
                        'pattern': 'https?://.+',
                        'title': 'Entrez une URL valide commençant par http:// ou https://'
                    }
                }) }}
                {{ form_errors(form.urlentreprise) }}
            </div>
        </div>

        <!-- Secteur -->
        <div class="form-group row">
            <div class="col-md-12 mb-3">
                {{ form_label(form.secteurentreprise, 'Secteur de l\'Entreprise', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.secteurentreprise, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.secteurentreprise.vars.valid is same as(true) ? ' is-valid' : (form.secteurentreprise.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'required': 'required',
                        'title': 'Veuillez sélectionner un secteur.'
                    }
                }) }}
                {{ form_errors(form.secteurentreprise) }}
            </div>
        </div>

        <!-- Boutons -->
        <div class="form-group text-right mt-4">
            <button type="submit" class="btn btn-primary">
                {{ button_label|default('Enregistrer') }}
            </button>
            <a href="{{ path('app_entreprise_index') }}" class="btn btn-secondary ml-2">
                Annuler
            </a>
        </div>
    </div>
</div>

{{ form_end(form) }}
