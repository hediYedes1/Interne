 {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Informations de la Branche</h5>
    </div>
    <div class="card-body">

        <!-- Localisation -->
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.localisationbranche, 'Localisation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.localisationbranche, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.localisationbranche.vars.valid is same as(true) ? ' is-valid' : (form.localisationbranche.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'maxlength': '255',
                        'required': 'required',
                        'title': 'Veuillez entrer la localisation de la branche.'
                    }
                }) }}
                {{ form_errors(form.localisationbranche) }}
            </div>

            <!-- Email -->
            <div class="col-md-6 mb-3">
                {{ form_label(form.emailbranche, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.emailbranche, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.emailbranche.vars.valid is same as(true) ? ' is-valid' : (form.emailbranche.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'pattern': '^[a-zA-Z0-9._%+-]+@esprit\.tn$',
                        'title': 'Format requis : nom.prenom@esprit.tn'
                    }
                }) }}
                {{ form_errors(form.emailbranche) }}
            </div>
        </div>

        <!-- Contact -->
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.contactbranche, 'Contact', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.contactbranche, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.contactbranche.vars.valid is same as(true) ? ' is-valid' : (form.contactbranche.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'maxlength': '15',
                        'pattern': '^[0-9\-\+]+$',
                        'title': 'Uniquement des chiffres, tirets ou +'
                    }
                }) }}
                {{ form_errors(form.contactbranche) }}
            </div>

            <!-- Nombre d'employés -->
            <div class="col-md-6 mb-3">
                {{ form_label(form.nombreemploye, 'Nombre d\'Employés', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nombreemploye, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.nombreemploye.vars.valid is same as(true) ? ' is-valid' : (form.nombreemploye.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'min': '1',
                        'title': 'Veuillez entrer un nombre positif'
                    }
                }) }}
                {{ form_errors(form.nombreemploye) }}
            </div>
        </div>

        <!-- Responsable -->
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.responsablebranche, 'Responsable', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.responsablebranche, {
                    'attr': {
                        'class': 'form-control' ~ (app.request.isMethod('POST') and form.responsablebranche.vars.valid is same as(true) ? ' is-valid' : (form.responsablebranche.vars.valid is same as(false) ? ' is-invalid' : '')),
                        'maxlength': '100',
                        'title': 'Nom du responsable de la branche'
                    }
                }) }}
                {{ form_errors(form.responsablebranche) }}
            </div>

            
        </div>

        <!-- Utilisateur (si nécessaire) -->
        {% if form.idutilisateur is defined %}
        <div class="form-group row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.idutilisateur, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.idutilisateur, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
                {{ form_errors(form.idutilisateur) }}
            </div>
        </div>
        {% endif %}

        <!-- Boutons -->
        <div class="form-group text-end mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
            </button>
            <a href="{{ path('app_brancheentreprise_index') }}" class="btn btn-secondary ms-2">
                Annuler
            </a>
        </div>
    </div>
</div>

{{ form_end(form) }}