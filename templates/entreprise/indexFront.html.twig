{% extends 'base.html.twig' %}

{% block title %}Gestion des Entreprises{% endblock %}

{% block css %}
  {{ parent() }}
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --primary: #4e73df;
      --primary-light: #e8f1ff;
      --secondary: #6c757d;
      --success: #1cc88a;
      --info: #36b9cc;
      --warning: #f6c23e;
      --danger: #e74a3b;
      --light: #f8f9fc;
      --dark: #5a5c69;
      --border: #e3e6f0;
    }

    .company-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .page-header {
      display: flex;
      flex-direction: column;
      margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
      .page-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }

    .page-title {
      color: var(--dark);
      font-weight: 600;
      margin-bottom: 1rem;
      font-size: 1.75rem;
    }

    .company-card {
      background: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
      border-left: 4px solid var(--primary);
      overflow: hidden;
    }

    .company-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0.5rem 1.5rem rgba(58, 59, 69, 0.2);
    }

    .card-header {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--border);
      position: relative;
      background-color: var(--light);
    }

    .card-title {
      font-weight: 600;
      color: var(--dark);
      margin: 0;
      padding-right: 2rem;
      font-size: 1.1rem;
    }

    .card-body {
      padding: 1.5rem;
      flex: 1;
    }

    .card-footer {
      padding: 1rem 1.5rem;
      border-top: 1px dashed var(--border);
      display: flex;
      justify-content: flex-end;
    }

    .empty-state {
      text-align: center;
      padding: 3rem;
      background-color: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .empty-state i {
      font-size: 3rem;
      color: var(--border);
      margin-bottom: 1.5rem;
    }

    .empty-state h4 {
      color: var(--dark);
      margin-bottom: 1rem;
    }

    .empty-state p {
      color: var(--secondary);
      margin-bottom: 1.5rem;
    }

    .search-container {
      margin-bottom: 2rem;
      padding: 1rem;
      background: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .search-form {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .search-input {
      flex: 1;
      min-width: 200px;
    }

    .sort-container {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-top: 1rem;
    }

    .sort-select {
      min-width: 150px;
    }

    .sort-order {
      display: flex;
      gap: 0.5rem;
    }

    .sort-order a {
      text-decoration: none;
      color: var(--secondary);
    }

    .sort-order a.active {
      color: var(--primary);
      font-weight: bold;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="company-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">üè¢ Liste des Entreprises</h1>
    </div>

    <!-- Search and Sort Form -->
    <div class="search-container">
      <form method="get" class="search-form">
        <div class="search-input">
          <input type="text" 
                 name="search" 
                 class="form-control" 
                 placeholder="Rechercher par nom ou secteur..." 
                 value="{{ search }}">
        </div>
        <div class="sort-container">
          <select name="sort" class="form-select sort-select">
            <option value="nomentreprise" {{ sortBy == 'nomentreprise' ? 'selected' : '' }}>Trier par nom</option>
            <option value="secteurentreprise" {{ sortBy == 'secteurentreprise' ? 'selected' : '' }}>Trier par secteur</option>
          </select>
          <div class="sort-order">
            <a href="{{ path('app_entreprise_index_front', {
              'search': search,
              'sort': sortBy,
              'order': 'asc'
            }) }}" class="{{ sortOrder == 'asc' ? 'active' : '' }}">
              <i class="fas fa-sort-amount-up"></i> Croissant
            </a>
            <a href="{{ path('app_entreprise_index_front', {
              'search': search,
              'sort': sortBy,
              'order': 'desc'
            }) }}" class="{{ sortOrder == 'desc' ? 'active' : '' }}">
              <i class="fas fa-sort-amount-down"></i> D√©croissant
            </a>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i> Rechercher
        </button>
      </form>
    </div>

    <!-- Company Cards -->
    <div class="row">
      {% if entreprises|length > 0 %}
        {% for entreprise in entreprises %}
          <div class="col-lg-6 col-xl-4 mb-4">
            <div class="company-card">
              <div class="card-header">
                <h3 class="card-title">{{ entreprise.nomentreprise }}</h3>
              </div>
              <div class="card-body">
                <p>{{ entreprise.descriptionentreprise }}</p>
                <p><strong>Secteur :</strong> {{ entreprise.secteurentreprise }}</p>
                <p><strong>Site Web :</strong> <a href="http://{{ entreprise.urlentreprise }}" target="_blank">{{ entreprise.urlentreprise }}</a></p>
              </div>
              <div class="card-footer">
                <a href="{{ path('app_entreprise_show_front', {identreprise: entreprise.identreprise}) }}" class="btn btn-primary">
                  Voir les d√©tails
                </a>
                <a href="{{ path('app_entreprise_qr_code_page', {identreprise: entreprise.identreprise}) }}" class="btn btn-info">
                  <i class="fas fa-qrcode"></i> QR Code
                </a>
              </div>
            </div>
          </div>

          <!-- Modal QR Code -->
          <div class="modal fade" id="qrModal{{ entreprise.identreprise }}" tabindex="-1" aria-labelledby="qrModalLabel{{ entreprise.identreprise }}" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="qrModalLabel{{ entreprise.identreprise }}">QR Code - {{ entreprise.nomentreprise }}</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                  <img src="{{ path('app_entreprise_qr_code', {'identreprise': entreprise.identreprise}) }}" alt="QR Code" class="img-fluid">
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="empty-state">
          <i class="fas fa-building"></i>
          <h4>Aucune entreprise trouv√©e</h4>
          <p>Essayez de modifier votre recherche ou ajoutez une nouvelle entreprise.</p>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}