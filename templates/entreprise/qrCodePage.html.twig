{% extends 'base.html.twig' %}

{% block title %}QR Code - {{ entreprise.nomentreprise }}{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    .qr-code-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .qr-code-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .qr-code-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .qr-code-image {
      max-width: 400px;
      width: 100%;
      border: 1px solid #e3e6f0;
      border-radius: 0.5rem;
      padding: 1rem;
      background: white;
    }

    .entreprise-info {
      width: 100%;
      max-width: 600px;
    }

    .info-item {
      margin-bottom: 1rem;
      padding: 1rem;
      background: #f8f9fc;
      border-radius: 0.25rem;
      border-left: 4px solid #4e73df;
    }

    .info-item h3 {
      color: #4e73df;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
    }

    .info-item p {
      margin: 0;
      color: #5a5c69;
    }

    .back-button {
      margin-top: 2rem;
      text-align: center;
    }

    .download-button {
      margin-top: 1rem;
      text-align: center;
    }

    .btn-download {
      background-color: #1cc88a;
      border-color: #1cc88a;
      color: white;
    }

    .btn-download:hover {
      background-color: #17a673;
      border-color: #17a673;
      color: white;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="qr-code-container">
    <div class="qr-code-header">
      <h1>QR Code - {{ entreprise.nomentreprise }}</h1>
      <p class="text-muted">Scannez ce QR code pour accéder aux informations de l'entreprise</p>
    </div>

    <div class="qr-code-content">
      <img src="{{ qrCode }}" alt="QR Code de {{ entreprise.nomentreprise }}" class="qr-code-image">

      <div class="entreprise-info">
        <div class="info-item">
          <h3>Nom de l'entreprise</h3>
          <p>{{ entreprise.nomentreprise }}</p>
        </div>

        <div class="info-item">
          <h3>Description</h3>
          <p>{{ entreprise.descriptionentreprise }}</p>
        </div>

        <div class="info-item">
          <h3>Site Web</h3>
          <p><a href="{{ entreprise.urlentreprise }}" target="_blank">{{ entreprise.urlentreprise }}</a></p>
        </div>

        <div class="info-item">
          <h3>Secteur d'activité</h3>
          <p>{{ entreprise.secteurentreprise }}</p>
        </div>

        <div class="info-item">
          <h3>Logo</h3>
          <p>{{ entreprise.logoentreprise }}</p>
        </div>
      </div>

      <div class="download-button">
        <a href="{{ path('app_entreprise_qr_code', {'identreprise': entreprise.identreprise}) }}" class="btn btn-download" download="qr-code-{{ entreprise.nomentreprise }}.png">
          <i class="fas fa-download"></i> Télécharger le QR Code
        </a>
      </div>

      <div class="back-button">
        <a href="{{ path('app_entreprise_index_front') }}" class="btn btn-primary">
          <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
      </div>
    </div>
  </div>
{% endblock %} 