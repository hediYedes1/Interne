{% extends 'base.html.twig' %}

{% block title %}QR Code - {{ entreprise.nomentreprise }}{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    .qr-code-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
    }

    .qr-code-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .qr-code-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .qr-code-image {
      max-width: 300px;
      width: 100%;
    }

    .entreprise-info {
      width: 100%;
      max-width: 600px;
    }

    .info-item {
      margin-bottom: 1rem;
      padding: 1rem;
      background: #f8f9fc;
      border-radius: 0.25rem;
    }

    .info-item h3 {
      color: #4e73df;
      margin-bottom: 0.5rem;
    }

    .back-button {
      margin-top: 2rem;
      text-align: center;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="qr-code-container">
    <div class="qr-code-header">
      <h1>QR Code - {{ entreprise.nomentreprise }}</h1>
    </div>

    <div class="qr-code-content">
      <img src="{{ qrCode }}" alt="QR Code" class="qr-code-image">

      <div class="entreprise-info">
        <div class="info-item">
          <h3>Nom de l'entreprise</h3>
          <p>{{ entreprise.nomentreprise }}</p>
        </div>

        <div class="info-item">
          <h3>Description</h3>
          <p>{{ entreprise.descriptionentreprise }}</p>
        </div>

        <div class="info-item">
          <h3>Site Web</h3>
          <p><a href="http://{{ entreprise.urlentreprise }}" target="_blank">{{ entreprise.urlentreprise }}</a></p>
        </div>

        <div class="info-item">
          <h3>Secteur d'activité</h3>
          <p>{{ entreprise.secteurentreprise }}</p>
        </div>
      </div>

      <div class="back-button">
        <a href="{{ path('app_entreprise_index_front') }}" class="btn btn-primary">
          <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
      </div>
    </div>
  </div>
{% endblock %} 