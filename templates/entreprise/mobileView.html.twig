<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ entreprise.nomentreprise }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #f8fafc;
            min-height: 100vh;
            color: #1e293b;
            line-height: 1.6;
        }

        .container {
            max-width: 100%;
            padding: 0;
        }

        .header {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            color: white;
            padding: 3rem 1.5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-radius: 0 0 2.5rem 2.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        .download-pdf {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.4);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            text-decoration: none;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
        }

        .download-pdf:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        .download-pdf i {
            font-size: 1rem;
        }

        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.1;
        }

        .logo-container {
            position: relative;
            width: 140px;
            height: 140px;
            margin: -70px auto 1.5rem;
            background: white;
            border-radius: 50%;
            padding: 5px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .logo {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid white;
        }

        .company-name {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 1s ease-out;
        }

        .company-sector {
            font-size: 1.1rem;
            opacity: 0.9;
            font-weight: 300;
            animation: fadeInUp 1s ease-out;
        }

        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .content {
            padding: 1.5rem;
            margin-top: 1rem;
        }

        .info-card {
            background: white;
            border-radius: 1.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 0, 0, 0.05);
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .info-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
            color: #3b82f6;
        }

        .info-header i {
            font-size: 1.8rem;
            background: #eff6ff;
            padding: 0.8rem;
            border-radius: 1rem;
        }

        .info-header h2 {
            font-size: 1.3rem;
            font-weight: 600;
            margin: 0;
            color: #1e293b;
        }

        .info-content {
            color: #475569;
            font-size: 1.1rem;
            line-height: 1.7;
            padding-left: 0.5rem;
        }

        .info-content a {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #eff6ff;
            border-radius: 0.5rem;
            margin-top: 0.5rem;
        }

        .info-content a:hover {
            color: #1d4ed8;
            background: #dbeafe;
        }

        .section-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #1e293b;
            margin: 2rem 0 1rem;
            padding-left: 1rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .section-title i {
            color: #3b82f6;
            background: #eff6ff;
            padding: 0.8rem;
            border-radius: 1rem;
        }

        .list-item {
            background: white;
            border-radius: 1rem;
            padding: 1.2rem;
            margin-bottom: 1rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .list-item i {
            color: #3b82f6;
            font-size: 1.2rem;
        }

        .list-item:hover {
            transform: translateX(5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        @media (min-width: 768px) {
            .container {
                max-width: 600px;
                margin: 0 auto;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="{{ path('app_entreprise_mobile_pdf', {'identreprise': entreprise.identreprise}) }}" class="download-pdf">
                <i class="fas fa-file-pdf"></i>
                Télécharger PDF
            </a>
            <div class="logo-container">
                <img src="{{ asset('uploads/logos/' ~ entreprise.logoentreprise) }}" alt="Logo {{ entreprise.nomentreprise }}" class="logo">
            </div>
            <h1 class="company-name">{{ entreprise.nomentreprise }}</h1>
            <p class="company-sector">{{ entreprise.secteurentreprise }}</p>
        </div>

        <div class="content">
            <div class="info-card">
                <div class="info-header">
                    <i class="fas fa-info-circle"></i>
                    <h2>À propos</h2>
                </div>
                <div class="info-content">
                    {{ entreprise.descriptionentreprise }}
                </div>
            </div>

            <div class="info-card">
                <div class="info-header">
                    <i class="fas fa-globe"></i>
                    <h2>Site Web</h2>
                </div>
                <div class="info-content">
                    <a href="http://{{ entreprise.urlentreprise }}" target="_blank">
                        <i class="fas fa-external-link-alt"></i>
                        {{ entreprise.urlentreprise }}
                    </a>
                </div>
            </div>

            {% if branches|length > 0 %}
                <h2 class="section-title">
                    <i class="fas fa-code-branch"></i>
                    Branches
                </h2>
                {% for branche in branches %}
                    <div class="list-item">
                        <i class="fas fa-building"></i>
                        {{ branche.nombranche }}
                    </div>
                {% endfor %}
            {% endif %}

            {% if departments|length > 0 %}
                <h2 class="section-title">
                    <i class="fas fa-sitemap"></i>
                    Départements
                </h2>
                {% for department in departments %}
                    <div class="list-item">
                        <i class="fas fa-users"></i>
                        {{ department.nomdepartment }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</body>
</html> 