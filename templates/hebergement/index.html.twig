{% extends 'base.html.twig' %}

{% block title %}Liste des Hébergements{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Liste des Hébergements</h1>
        
        <div class="row">
            {% for hebergement in hebergements %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">{{ hebergement.nomhebergement }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>Type:</strong> 
                                <span class="badge bg-info" style="color: white;">
                                    {{ hebergement.typehebergement }}
                                </span>
                            </div>

                            <div class="mb-2">
                                <strong>Adresse:</strong> 
                                <p class="mb-0">{{ hebergement.adressehebergement }}</p>
                            </div>
                            <div class="mb-2">
                                <strong>Description:</strong>
                                <p class="card-text">{{ hebergement.descriptionhebergement|slice(0, 100) }}{% if hebergement.descriptionhebergement|length > 100 %}...{% endif %}</p>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Nuits:</strong> {{ hebergement.nbrnuitehebergement }}
                                </div>
                                <div class="col-6">
                                    <strong>Prix:</strong> {{ hebergement.prixhebergement }} dt
                                </div>
                            </div>
                            <div class="mt-2">
                                <strong>Disponibilité:</strong> 
                                <span class="badge {% if hebergement.disponibilitehebergement %}bg-success{% else %}bg-danger{% endif %}" style="color: white;">
                                    {% if hebergement.disponibilitehebergement %}
                                        ✔️ Disponible
                                    {% else %}
                                        ✖️ Non disponible
                                    {% endif %}
                                </span>


                            </div>
                        <div class="mt-4">
            <a href="{{ path('app_hebergement_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> reserver</a>
                        </div>
                    </div>
                       
                </div>
            </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        Aucun hébergement trouvé.
                    </div>
                </div>
            {% endfor %}
    </div>
</div>

    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: none;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .card-header {
            border-bottom: none;
        }
        
        .card-title {
            font-weight: 600;
        }
        
        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
        
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        @media (max-width: 768px) {
            .col-md-4 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }
    </style>
{% endblock %}