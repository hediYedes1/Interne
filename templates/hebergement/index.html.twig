{% extends 'base.html.twig' %}

{% block title %}Liste des H√©bergements{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Liste des H√©bergements</h1>
        <a href="{{ path('app_affectationhebergement_index') }}" class="btn btn-outline-primary">
            <i class="fas fa-list"></i> Voir vos r√©servations
        </a>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-4">
            <input type="text" id="searchInput" class="form-control" placeholder="üîç Rechercher..." onkeyup="filterCards()">
        </div>
        <div class="col-md-4">
            <select id="typeFilter" class="form-select" onchange="filterCards()">
                <option value="">Tous les types</option>
                <option value="hotel">Hotel</option>
                <option value="appartement">Appartement</option>
                <option value="auberge">Auberge</option>
            </select>
        </div>
    </div>

    <div class="row">
        {% for hebergement in hebergements %}
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm hebergement-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">{{ hebergement.nomhebergement }}</h5>
                </div>
                <div class="card-body">
                    <!-- Weather Widget -->
                    <div class="weather-widget mb-3" data-location="{{ hebergement.adressehebergement }}">
                        <div class="weather-loading">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <small class="text-muted">Chargement m√©t√©o...</small>
                        </div>
                        <div class="weather-content d-none">
                            <div class="d-flex align-items-center">
                                <div class="weather-icon me-2"></div>
                                <div>
                                    <span class="weather-temp fw-bold fs-5"></span>
                                    <div class="weather-desc small text-muted"></div>
                                </div>
                            </div>
                            <div class="weather-details mt-2 row small">
                                <div class="col-6">
                                    <i class="fas fa-tint me-1"></i>
                                    <span class="weather-humidity"></span>%
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-wind me-1"></i>
                                    <span class="weather-wind"></span> km/h
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-2">
                        <strong>Type:</strong>
                        <span class="badge bg-info text-white">{{ hebergement.typehebergement }}</span>
                    </div>

                    <div class="mb-2">
                        <strong>Adresse:</strong>
                        <p class="mb-0">{{ hebergement.adressehebergement }}</p>
                    </div>
                    
                    <div class="mb-2">
                        <strong>Description:</strong>
                        <p class="card-text">
                            {{ hebergement.descriptionhebergement|slice(0, 100) }}{% if hebergement.descriptionhebergement|length > 100 %}...{% endif %}
                        </p>
                    </div>
                    
                    <div class="row mb-2">
                        <div class="col-6">
                            <strong>Nuits:</strong> {{ hebergement.nbrnuitehebergement }}
                        </div>
                        <div class="col-6">
                            <strong>Prix:</strong> 
                            <span class="price-tnd fw-bold">{{ hebergement.prixhebergement }}</span> TND
                            <div class="currency-conversion small mt-2">
                                <div class="currency-box">
                                    <div class="currency-item">
                                        <i class="fas fa-dollar-sign me-1"></i>
                                        <span class="price-usd fw-bold">
                                            {% if hebergement.convertedPrices.USD is not null %}
                                                {{ hebergement.convertedPrices.USD }}
                                            {% else %}
                                                <span class="text-danger">N/A</span>
                                            {% endif %}
                                        </span> USD
                                    </div>
                                    <div class="currency-item mt-1">
                                        <i class="fas fa-euro-sign me-1"></i>
                                        <span class="price-eur fw-bold">
                                            {% if hebergement.convertedPrices.EUR is not null %}
                                                {{ hebergement.convertedPrices.EUR }}
                                            {% else %}
                                                <span class="text-danger">N/A</span>
                                            {% endif %}
                                        </span> EUR
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Disponibilit√©:</strong>
                        <span class="badge {% if hebergement.disponibilitehebergement %}bg-success{% else %}bg-danger{% endif %}">
                            {% if hebergement.disponibilitehebergement %}
                                ‚úîÔ∏è Disponible
                            {% else %}
                                ‚úñÔ∏è Non disponible
                            {% endif %}
                        </span>
                    </div>
                    
                    <div class="d-grid">
                        <a href="{{ path('app_affectationhebergement_new', {
                            'idhebergement': hebergement.idhebergement, 
                            'prix': hebergement.prixhebergement
                        }) }}" class="btn btn-success">
                            <i class="fas fa-calendar-check"></i> R√©server
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">Aucun h√©bergement trouv√©.</div>
        </div>
        {% endfor %}
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }
    
    .card-header {
        border-bottom: none;
        padding: 1rem 1.25rem;
    }
    
    .weather-widget {
        background: rgba(13, 110, 253, 0.05);
        border-radius: 8px;
        padding: 10px;
        border-left: 3px solid #0d6efd;
    }
    
    .weather-icon {
        font-size: 24px;
        width: 30px;
        text-align: center;
    }
    
    .weather-temp {
        font-size: 1.2rem;
        color: #0d6efd;
    }
    
    .weather-details {
        color: #6c757d;
        font-size: 0.85rem;
    }
    
    .currency-conversion {
        line-height: 1.3;
    }
    
    .currency-box {
        background-color: rgba(248, 249, 250, 0.8);
        border-radius: 6px;
        padding: 8px 10px;
        border-left: 3px solid #0d6efd;
        margin-top: 5px;
    }
    
    .currency-item {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
    }
    
    .currency-item i {
        width: 16px;
        text-align: center;
        color: #6c757d;
    }
    
    .price-tnd {
        color: #0d6efd;
        font-weight: 600;
    }
    
    .price-usd, .price-eur {
        color: #212529;
        margin: 0 3px;
    }
    
    .conversion-loading {
        display: flex;
        align-items: center;
        font-size: 0.85rem;
    }
    
    @media (max-width: 768px) {
        .col-md-4 {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }
</style>

<script>
    // Weather condition to emoji mapping
    const weatherIcons = {
        'snow': '‚ùÑÔ∏è',
        'rain': 'üåßÔ∏è',
        'fog': 'üå´Ô∏è',
        'wind': 'üí®',
        'cloudy': '‚òÅÔ∏è',
        'partly-cloudy-day': '‚õÖ',
        'partly-cloudy-night': '‚òÅÔ∏è',
        'clear-day': '‚òÄÔ∏è',
        'clear-night': 'üåô',
        'thunder-rain': '‚õàÔ∏è',
        'showers-day': 'üå¶Ô∏è'
    };

    async function fetchWeatherForCards() {
        const weatherWidgets = document.querySelectorAll('.weather-widget');
        for (const widget of weatherWidgets) {
            const location = widget.dataset.location;
            const loadingEl = widget.querySelector('.weather-loading');
            const contentEl = widget.querySelector('.weather-content');
            try {
                const apiUrl = `https://weather.visualcrossing.com/VisualCrossingWebServices/rest/services/timeline/${encodeURIComponent(location)}?unitGroup=metric&key=EJ78WFWNHH9DMBS7CUK53WYKK&contentType=json`;
                const res = await fetch(apiUrl);
                if (!res.ok) throw new Error(res.status);
                const data = await res.json();
                const curr = data.currentConditions;
                if (curr) {
                    widget.querySelector('.weather-icon').textContent = weatherIcons[curr.icon] || 'üå°Ô∏è';
                    widget.querySelector('.weather-temp').textContent = Math.round(curr.temp);
                    widget.querySelector('.weather-desc').textContent = curr.conditions;
                    widget.querySelector('.weather-humidity').textContent = curr.humidity;
                    widget.querySelector('.weather-wind').textContent = Math.round(curr.windspeed * 3.6);
                    loadingEl.classList.add('d-none');
                    contentEl.classList.remove('d-none');
                }
            } catch (e) {
                console.error('Weather fetch error:', e);
                loadingEl.innerHTML = '<small class="text-danger">M√©t√©o indisponible</small>';
            }
        }
    }

    function filterCards() {
        const query = document.getElementById('searchInput').value.toLowerCase();
        const type = document.getElementById('typeFilter').value.toLowerCase();
        document.querySelectorAll('.hebergement-card').forEach(card => {
            const text = card.textContent.toLowerCase();
            const show = (!query || text.includes(query)) && (!type || text.includes(type));
            card.closest('.col-md-4').style.display = show ? 'block' : 'none';
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        fetchWeatherForCards();
    });
</script>
{% endblock %}



