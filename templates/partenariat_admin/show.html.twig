
{% extends 'base1.html.twig' %}

{% block title %}Partenariat{% endblock %}

{% block body %}
    <div class="container-fluid px-4 py-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h2 text-primary fw-bold mb-0">Détails du partenariat</h1>
                        <p class="text-muted">Informations complètes sur le partenariat</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_partenariat_admin_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <a href="{{ path('app_partenariat_admin_edit', {'idpartenariat': partenariat.idpartenariat}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Main Information Card -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="partner-logo me-3">
                                <div class="logo-placeholder rounded-circle bg-primary-subtle d-flex align-items-center justify-content-center">
                                    <span class="h3 mb-0 text-primary">{{ partenariat.nompartenariat|first|upper }}</span>
                                </div>
                            </div>
                            <div>
                                <h2 class="h3 mb-1 fw-bold text-dark">{{ partenariat.nompartenariat }}</h2>
                                <p class="mb-0 text-muted">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    {{ partenariat.adressepartenariat }}
                                </p>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-card p-3 bg-light rounded-3 h-100">
                                    <h3 class="h6 mb-3 text-dark">Coordonnées</h3>
                                    <p class="mb-2 d-flex align-items-center">
                                        <i class="fas fa-phone me-2 text-primary"></i>
                                        <span>{{ partenariat.numtelpartenariat }}</span>
                                    </p>
                                    <p class="mb-0 d-flex align-items-center">
                                        <i class="fas fa-map-pin me-2 text-primary"></i>
                                        <span>{{ partenariat.adressepartenariat }}</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card p-3 bg-light rounded-3 h-100">
                                    <h3 class="h6 mb-3 text-dark">Statut</h3>
                                    <p class="mb-2 d-flex align-items-center">
                                        <i class="fas fa-check-circle me-2 text-success"></i>
                                        <span>Partenariat actif</span>
                                    </p>
                                    <p class="mb-0 d-flex align-items-center">
                                        <i class="fas fa-calendar me-2 text-primary"></i>
                                        <span>Depuis le 01/01/2023</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Performance Metrics -->
                        <div class="performance-section mb-4">
                            <h3 class="h5 mb-3 text-dark">Performance</h3>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-primary-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-handshake fa-2x text-primary"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Collaborations</h4>
                                        <div class="h3 mb-2 fw-bold text-primary">12</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-success-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-chart-line fa-2x text-success"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Croissance</h4>
                                        <div class="h3 mb-2 fw-bold text-success">+24%</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric-card p-3 bg-info-subtle rounded-3 text-center h-100">
                                        <div class="metric-icon mb-2">
                                            <i class="fas fa-star fa-2x text-info"></i>
                                        </div>
                                        <h4 class="h6 mb-1">Satisfaction</h4>
                                        <div class="h3 mb-2 fw-bold text-info">92%</div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 92%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Performance Card -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Performance</h3>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Collaborations</span>
                                <span class="small">75%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Croissance</span>
                                <span class="small">85%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Satisfaction</span>
                                <span class="small">92%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 92%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="performanceChart" height="200"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Location Card -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Localisation</h3>
                        <div class="map-placeholder bg-light rounded-3 mb-3" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                            <div class="text-center">
                                <i class="fas fa-map-marker-alt fa-3x text-primary mb-2"></i>
                                <p class="mb-0">{{ partenariat.adressepartenariat }}</p>
                            </div>
                        </div>
                        <a href="https://maps.google.com/?q={{ partenariat.adressepartenariat }}" target="_blank" class="btn btn-outline-primary w-100">
                            <i class="fas fa-external-link-alt me-2"></i>Voir sur Google Maps
                        </a>
                    </div>
                </div>

                <!-- Status Card -->
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-3 text-dark">Statut du partenariat</h3>
                        <div class="status-indicator p-3 rounded-3 text-center mb-3 bg-success-subtle">
                            <i class="fas fa-check-circle fa-3x text-success mb-2"></i>
                            <h4 class="h6 mb-0 text-success">
                                Partenariat actif
                            </h4>
                        </div>
                        <div class="d-grid">
                            {{ include('partenariat_admin/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #dddfeb;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --text-color: #5a5c69;
            --light-bg: #f8f9fc;
        }

        .text-primary { color: var(--primary-color) !important; }
        .text-success { color: var(--success-color) !important; }
        .text-info { color: var(--info-color) !important; }
        
        .btn-primary, .bg-primary { 
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-outline-primary {
            color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-outline-primary:hover {
            background-color: var(--primary-color) !important;
            color: white !important;
        }
        
        .logo-placeholder {
            width: 64px;
            height: 64px;
        }
        
        .table th {
            font-weight: 600;
            font-size: 0.85rem;
            color: var(--text-color);
        }
        
        .bg-primary-subtle { background-color: rgba(78, 115, 223, 0.1); }
        .bg-success-subtle { background-color: rgba(28, 200, 138, 0.1); }
        .bg-info-subtle { background-color: rgba(54, 185, 204, 0.1); }
        .bg-danger-subtle { background-color: rgba(231, 74, 59, 0.1); }
        
        .progress {
            background-color: rgba(78, 115, 223, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .progress-bar {
            border-radius: 10px;
        }
        
        .metric-card {
            transition: transform 0.2s ease;
        }
        
        .metric-card:hover {
            transform: translateY(-5px);
        }
        
        .chart-container {
            position: relative;
            margin-top: 1rem;
            height: 200px;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof Chart !== 'undefined') {
                // Performance chart
                var ctx = document.getElementById('performanceChart').getContext('2d');
                var performanceChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Performance',
                            data: [65, 70, 75, 80, 85, 90],
                            borderColor: '#4e73df',
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}

