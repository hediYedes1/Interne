{% extends 'baseadmin.html.twig' %}

{% block title %}Partenariat{% endblock %}

{% block body %}
    <h1 class="title">Détails du partenariat</h1>

    <table class="styled-table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ partenariat.idpartenariat }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ partenariat.nompartenariat }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ partenariat.adressepartenariat }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ partenariat.numtelpartenariat }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action-buttons">
        <a href="{{ path('app_partenariat_index') }}" class="btn btn-secondary">⬅ Retour à la liste</a>
        <a href="{{ path('app_partenariat_edit', {'idpartenariat': partenariat.idpartenariat}) }}" class="btn btn-primary">✏️ Modifier</a>
        {{ include('partenariat/_delete_form.html.twig') }}
    </div>

    <style>
        .title {
            text-align: center;
            font-size: 26px;
            margin-bottom: 30px;
            color: #2c3e50;
        }

        .styled-table {
            width: 100%;
            max-width: 700px;
            margin: 0 auto 30px;
            border-collapse: collapse;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .styled-table th,
        .styled-table td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid #f0f0f0;
        }

        .styled-table th {
            background-color: #f8f9fa;
            color: #34495e;
            font-weight: 600;
            width: 35%;
        }

        .styled-table td {
            color: #2c3e50;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 15px;
            font-weight: 500;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #3d74b6;
            color: white;
        }

        .btn-primary:hover {
            background-color: #2c5f9e;
        }

        .btn-secondary {
            background-color: #bdc3c7;
            color: #2c3e50;
        }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }
    </style>
{% endblock %}
