{% extends 'base.html.twig' %}

{% block title %}Liste des Partenariats{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">Liste des Partenariats</h1>
            <a href="{{ path('app_partenariat_admin_new') }}" class="btn btn-success">➕ Nouveau Partenariat</a>
        </div>
        <div class="mt-4">
            <a href="{{ path('app_hebergement_admin_index') }}" class="btn btn-outline-primary">
                🏨 Voir les hébergements
            </a>
        </div>
        <br><br>
        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for partenariat in partenariats %}
                    <tr>
                        <td>{{ partenariat.idpartenariat }}</td>
                        <td>{{ partenariat.nompartenariat }}</td>
                        <td>{{ partenariat.adressepartenariat }}</td>
                        <td>{{ partenariat.numtelpartenariat }}</td>
                        <td>
                            <div class="d-flex gap-1">
                                <a href="{{ path('app_partenariat_admin_show', {'idpartenariat': partenariat.idpartenariat}) }}" class="btn btn-info btn-sm">👁️ Voir</a>&nbsp;
                                <a href="{{ path('app_partenariat_admin_edit', {'idpartenariat': partenariat.idpartenariat}) }}" class="btn btn-warning btn-sm">✏️ Modifier</a>&nbsp;
                                {{ include('partenariat/_delete_form.html.twig', { partenariat: partenariat }) }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun partenariat trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        
    </div>

    <script>
        // Activer les tooltips Bootstrap
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
{% endblock %}
