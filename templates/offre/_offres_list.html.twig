{# templates/offre/_offres_list.html.twig #}
{% if offres|length > 0 %}
    {% for offre in offres %}
    <div class="col">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-3">
                <div class="d-flex justify-content-between">
                    <span class="badge bg-primary">{{ offre.typecontrat.value }}</span>
                    {% if offre.projet %}
                    <span class="badge bg-info text-dark">
                        <i class="fas fa-project-diagram me-1"></i>
                        {% if offre.projet.titreprojet|length > 15 %}
                            {{ offre.projet.titreprojet|slice(0, 15) }}...
                        {% else %}
                            {{ offre.projet.titreprojet }}
                        {% endif %}
                    </span>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <h3 class="h5 card-title">{{ offre.titreoffre }}</h3>
                <p class="card-text text-muted">
                    {% if offre.descriptionoffre|length > 100 %}
                        {{ offre.descriptionoffre|slice(0, 100) }}...
                    {% else %}
                        {{ offre.descriptionoffre }}
                    {% endif %}
                </p>
                
                <ul class="list-unstyled">
                    <li class="mb-1">
                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                        {{ offre.localisationoffre }}
                    </li>
                    <li class="mb-1">
                        <i class="fas fa-money-bill-wave text-primary me-2"></i>
                        {{ offre.salaireoffre }} TND
                    </li>
                    <li>
                        <i class="fas fa-clock text-primary me-2"></i>
                        Expire le {{ offre.datelimite|date('d/m/Y') }}
                    </li>
                </ul>
            </div>
            <div class="card-footer bg-white border-0 pb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-envelope me-1"></i>{{ offre.emailrh }}
                    </small>
                    <a href="{{ path(app.request.attributes.get('_route') == 'back_offre_index' ? 'back_offre_show' : 'front_offre_show', {'idoffre': offre.idoffre}) }}" 
                       class="btn btn-sm btn-outline-primary">
                        Voir détails <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    
    {# Pagination #}
    <div class="col-12 mt-4">
        <nav aria-label="Pagination">
            {{ knp_pagination_render(offres, null, {}, {
                'align': 'center',
                'size': 'medium',
                'style': 'rounded',
            }) }}
        </nav>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-info text-center py-4">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>Aucune offre disponible</h4>
            <p class="mb-0">
                {% if searchQuery is defined and searchQuery or selectedType is defined and selectedType %}
                    Aucune offre ne correspond à vos critères de recherche
                {% else %}
                    Aucune offre disponible pour le moment
                {% endif %}
            </p>
        </div>
    </div>
{% endif %}