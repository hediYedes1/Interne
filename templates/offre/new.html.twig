{% extends 'base1.html.twig' %}

{% block title %}Nouvelle Offre{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center mt-5">
        <div class="card shadow-lg p-5 rounded col-md-8">
            <div class="card-body">
                <h2 class="text-center mb-4">Créer une nouvelle offre</h2>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                    {# Titre de l'offre #}
                    <div class="mb-3">
                        {{ form_label(form.titreoffre, "Titre de l'offre", {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titreoffre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.titreoffre) }}
                        </div>
                    </div>

                    {# Description de l'offre #}
                    <div class="mb-3">
                        {{ form_label(form.descriptionoffre, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.descriptionoffre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.descriptionoffre) }}
                        </div>
                    </div>

                    {# Salaire #}
                    <div class="mb-3">
                        {{ form_label(form.salaireoffre, 'Salaire', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.salaireoffre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.salaireoffre) }}
                        </div>
                    </div>

                    {# Localisation #}
                    <div class="mb-3">
                        {{ form_label(form.localisationoffre, 'Localisation', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.localisationoffre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.localisationoffre) }}
                        </div>
                    </div>

                    {# Email RH #}
                    <div class="mb-3">
                        {{ form_label(form.emailrh, 'Email RH', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.emailrh, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.emailrh) }}
                        </div>
                    </div>

                    {# Type contrat #}
                    <div class="mb-3">
                        {{ form_label(form.typecontrat, 'Type de contrat', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.typecontrat, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.typecontrat) }}
                        </div>
                    </div>

                    {# Date limite #}
                    <div class="mb-3">
                        {{ form_label(form.datelimite, 'Date limite', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.datelimite, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger small">
                            {{ form_errors(form.datelimite) }}
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary px-4">Créer l'offre</button>
                    </div>

                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <a href="{{ path('back_offre_index') }}" class="btn btn-link">← Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}