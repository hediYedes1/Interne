{% extends 'base.html.twig' %}

{% block title %}Liste des offres d'emploi{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h1 class="display-5 fw-bold">
                    <i class="fas fa-briefcase me-2"></i>Nos offres d'emploi
                </h1>
                <a href="{{ path('front_offre_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nouvelle offre
                </a>
            </div>

            {# Filtres #}
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form id="searchForm" class="row g-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">Recherche</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="search" name="search" 
                                       placeholder="Titre, description..." value="{{ searchQuery }}">
                                <input type="hidden" id="page" name="page" value="1">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="typecontrat" class="form-label">Type de contrat</label>
                            <select class="form-select" id="typecontrat" name="typecontrat">
                                <option value="">Tous types</option>
                                <option value="CDI" {% if selectedType == 'CDI' %}selected{% endif %}>CDI</option>
                                <option value="CDD" {% if selectedType == 'CDD' %}selected{% endif %}>CDD</option>
                                <option value="STAGE" {% if selectedType == 'STAGE' %}selected{% endif %}>Stage</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="fas fa-filter me-2"></i>Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Liste des offres #}
            <div id="offresContainer" class="row row-cols-1 row-cols-md-2 g-4">
                {% include 'offre/_offres_list.html.twig' %}
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search');
    const typeContratSelect = document.getElementById('typecontrat');
    const pageInput = document.getElementById('page');
    const offresContainer = document.getElementById('offresContainer');
    let timer;

    // Gestion des liens de pagination
    document.addEventListener('click', function(e) {
        if (e.target.closest('.page-link')) {
            e.preventDefault();
            const url = new URL(e.target.closest('.page-link').href);
            pageInput.value = url.searchParams.get('page') || 1;
            performSearch();
        }
    });

    // Recherche dynamique
    function handleSearch() {
        clearTimeout(timer);
        timer = setTimeout(function() {
            pageInput.value = 1; // Reset à la première page lors d'une nouvelle recherche
            performSearch();
        }, 300);
    }

    searchInput.addEventListener('input', handleSearch);
    typeContratSelect.addEventListener('change', handleSearch);

    // Soumission du formulaire
    document.getElementById('searchForm').addEventListener('submit', function(e) {
        e.preventDefault();
        pageInput.value = 1;
        performSearch();
    });

    function performSearch() {
        const route = "{{ path('front_offre_index') }}";
        const params = new URLSearchParams();
        
        if (searchInput.value) params.append('search', searchInput.value);
        if (typeContratSelect.value) params.append('typecontrat', typeContratSelect.value);
        if (pageInput.value) params.append('page', pageInput.value);
        
        fetch(route + '?' + params.toString(), {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (!response.ok) throw new Error('Network response was not ok');
            return response.text();
        })
        .then(html => {
            offresContainer.innerHTML = html;
            // Scroll doux vers le haut après le chargement
            window.scrollTo({
                top: offresContainer.offsetTop - 20,
                behavior: 'smooth'
            });
        })
        .catch(error => {
            console.error('Error:', error);
            // Ajoutez un feedback utilisateur ici si nécessaire
        });
    }
});
</script>
{% endblock %}
{% endblock %}