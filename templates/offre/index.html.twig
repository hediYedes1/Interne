{% extends 'base.html.twig' %}

{% block title %}Offre Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Dernières Offres d'Emploi</h1>

        <!-- Barre de recherche -->
        <form method="get" action="{{ path('app_offre_index') }}" class="form-inline mb-4">
            <input type="text" name="search" class="form-control mr-2" placeholder="Rechercher par titre..." value="{{ app.request.get('search') }}">
            <select name="typecontrat" class="form-control mr-2">
                <option value="">Tous les types de contrat</option>
                <option value="CDI" {% if app.request.get('typecontrat') == 'CDI' %}selected{% endif %}>CDI</option>
                <option value="CDD" {% if app.request.get('typecontrat') == 'CDD' %}selected{% endif %}>CDD</option>
                <option value="Stage" {% if app.request.get('typecontrat') == 'Stage' %}selected{% endif %}>Stage</option>
            </select>
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </form>

        <!-- Liste des offres -->
        {% for offre in offres %}
            <div class="offer-summary mb-4 p-3 border rounded">
                <h5>{{ offre.titreoffre }}</h5>
                {{ offre.descriptionoffre|slice(0, 100) }}...<br>
                <strong>Lieu :</strong> {{ offre.localisationoffre }}<br>
                <strong>Date limite :</strong> {{ offre.datelimite ? offre.datelimite|date('d/m/Y') : 'N/A' }}</p>
                <div class="d-flex justify-content-between">
                    <span><strong>Salaire :</strong> {{ offre.salaireoffre }} TND</span>
                    <a href="{{ path('app_offre_show', {'idoffre': offre.idoffre}) }}" class="btn btn-info btn-sm text-white">
                        <i class="fas fa-eye"></i> Voir Plus
                    </a>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucune offre trouvée</p>
        {% endfor %}


        <div class="text-center mt-3">
            <a href="{{ path('app_offre_new') }}" class="btn btn-success text-white">
                <i class="fas fa-plus-circle"></i> Créer une nouvelle offre
            </a>
        </div>
    </div>
{% endblock %}
