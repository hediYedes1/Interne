{% extends 'base1.html.twig' %}

{% block title %}Liste des offres d'emploi{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h1 class="display-5 fw-bold">
                    <i class="fas fa-briefcase me-2"></i>Nos offres d'emploi
                </h1>
                <a href="{{ path('back_offre_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nouvelle offre
                </a>
            </div>

            {# Filtres #}
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">Recherche</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="search" name="search" 
                                       placeholder="Titre, description..." value="{{ app.request.query.get('search') }}">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="typecontrat" class="form-label">Type de contrat</label>
                            <select class="form-select" id="typecontrat" name="typecontrat">
                                <option value="">Tous types</option>
                                <option value="CDI" {% if app.request.query.get('typecontrat') == 'CDI' %}selected{% endif %}>CDI</option>
                                <option value="CDD" {% if app.request.query.get('typecontrat') == 'CDD' %}selected{% endif %}>CDD</option>
                                <option value="Stage" {% if app.request.query.get('typecontrat') == 'Stage' %}selected{% endif %}>Stage</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="fas fa-filter me-2"></i>Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Liste des offres #}
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for offre in offres %}
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-white border-0 pt-3">
                            <div class="d-flex justify-content-between">
                                <span class="badge bg-primary">{{ offre.typecontrat.value }}</span>
                                {% if offre.projet %}
                                <span class="badge bg-info text-dark">
                                    <i class="fas fa-project-diagram me-1"></i>
                                    {% if offre.projet.titreprojet|length > 15 %}
                                        {{ offre.projet.titreprojet|slice(0, 15) }}...
                                    {% else %}
                                        {{ offre.projet.titreprojet }}
                                    {% endif %}
                                </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            <h3 class="h5 card-title">{{ offre.titreoffre }}</h3>
                            <p class="card-text text-muted">
                                {% if offre.descriptionoffre|length > 100 %}
                                    {{ offre.descriptionoffre|slice(0, 100) }}...
                                {% else %}
                                    {{ offre.descriptionoffre }}
                                {% endif %}
                            </p>
                            
                            <ul class="list-unstyled">
                                <li class="mb-1">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    {{ offre.localisationoffre }}
                                </li>
                                <li class="mb-1">
                                    <i class="fas fa-money-bill-wave text-primary me-2"></i>
                                    {{ offre.salaireoffre }} TND
                                </li>
                                <li>
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    Expire le {{ offre.datelimite|date('d/m/Y') }}
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-envelope me-1"></i>{{ offre.emailrh }}
                                </small>
                                <a href="{{ path('back_offre_show', {'idoffre': offre.idoffre}) }}" 
                                   class="btn btn-sm btn-outline-primary">
                                    Voir détails <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center py-4">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <h4>Aucune offre disponible</h4>
                        <p class="mb-0">Aucune offre ne correspond à vos critères de recherche</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
