{% extends 'base.html.twig' %}

{% block title %}Détails de l'offre{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de l'offre</h1>

    <div class="card shadow p-4">
        <table class="table table-bordered">
            <tbody>
                <tr><th>Id</th><td>{{ offre.idoffre }}</td></tr>
                <tr><th>Titre</th><td>{{ offre.titreoffre }}</td></tr>
                <tr><th>Description</th><td>{{ offre.descriptionoffre }}</td></tr>
                <tr><th>Salaire</th><td>{{ offre.salaireoffre }}</td></tr>
                <tr><th>Localisation</th><td>{{ offre.localisationoffre }}</td></tr>
                <tr><th>Email RH</th><td>{{ offre.emailrh }}</td></tr>
                <tr><th>Type de contrat</th><td>{{ offre.typecontrat.value }}</td></tr>
                <tr><th>Date limite</th><td>{{ offre.datelimite ? offre.datelimite|date('Y-m-d') : 'Non définie' }}</td></tr>
                <tr>
                    <th>Projet associé</th>
                    <td>
                        {% if offre.projet %}
                            <strong>Titre :</strong> {{ offre.projet.titreprojet }}<br>
                            <strong>Description :</strong> {{ offre.projet.descriptionprojet }}<br>
                            <strong>Début :</strong> {{ offre.projet.datedebut|date('Y-m-d') }}<br>
                            <strong>Fin :</strong> {{ offre.projet.datefin|date('Y-m-d') }}
                        {% else %}
                            <em class="text-muted">Pas de projet associé</em>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('front_offre_index') }}" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>

            <div class="d-flex gap-2">
                <a href="{{ path('front_offre_edit', {'idoffre': offre.idoffre}) }}" class="btn btn-warning text-white">
                    <i class="fas fa-edit"></i> Modifier
                </a>

                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ offre.idoffre }}">
                    <i class="fas fa-trash-alt"></i> Supprimer
                </button>
            </div>
        </div>

        <!-- Modal Bootstrap 5 -->
        <div class="modal fade" id="deleteModal{{ offre.idoffre }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ offre.idoffre }}" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel{{ offre.idoffre }}">Confirmation de suppression</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Êtes-vous sûr de vouloir supprimer cette offre ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <form action="{{ path('front_offre_delete', {'idoffre': offre.idoffre}) }}" method="POST" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.idoffre) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Boutons supplémentaires -->
        <div class="d-flex justify-content-end mt-4 gap-2">
            <a href="{{ path('front_offre_new') }}" class="btn btn-success text-white">
                <i class="fas fa-plus-circle"></i> Nouvelle offre
            </a>
            <a href="{{ path('app_postuler', {'id': offre.idoffre}) }}" class="btn btn-primary text-white">
                Postuler à cette offre
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
{% endblock %}