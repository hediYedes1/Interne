{% extends 'base2.html.twig' %}

{% block title %}Nouvelle Offre{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-lg p-5 rounded col-md-8">
        {# Flash messages display #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mb-4">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card-body">
            <h2 class="text-center mb-4">
                <i class="fas fa-plus-circle me-2"></i>Créer une nouvelle offre
            </h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                {# Titre de l'offre #}
                <div class="mb-3">
                    {{ form_label(form.titreoffre, "Titre de l'offre", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.titreoffre, {'attr': {'class': 'form-control' ~ (form.titreoffre.vars.errors|length ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.titreoffre) }}
                    </div>
                </div>

                {# Description de l'offre #}
                <div class="mb-3">
                    {{ form_label(form.descriptionoffre, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.descriptionoffre, {'attr': {'class': 'form-control' ~ (form.descriptionoffre.vars.errors|length ? ' is-invalid' : ''), 'rows': 5}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.descriptionoffre) }}
                    </div>
                </div>

                <div class="row">
                    {# Salaire #}
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.salaireoffre, 'Salaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.salaireoffre, {'attr': {'class': 'form-control' ~ (form.salaireoffre.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <span class="input-group-text">€</span>
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.salaireoffre) }}
                        </div>
                    </div>

                    {# Type contrat #}
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.typecontrat, 'Type de contrat', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.typecontrat, {'attr': {'class': 'form-select' ~ (form.typecontrat.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.typecontrat) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    {# Localisation #}
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.localisationoffre, 'Localisation', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.localisationoffre, {'attr': {'class': 'form-control' ~ (form.localisationoffre.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.localisationoffre) }}
                        </div>
                    </div>

                    {# Date limite #}
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.datelimite, 'Date limite', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.datelimite, {'attr': {'class': 'form-control' ~ (form.datelimite.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.datelimite) }}
                        </div>
                    </div>
                </div>

                {# Email RH #}
                <div class="mb-4">
                    {{ form_label(form.emailrh, 'Email RH', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.emailrh, {'attr': {'class': 'form-control' ~ (form.emailrh.vars.errors|length ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.emailrh) }}
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Enregistrer l'offre
                    </button>
                </div>

            {{ form_end(form) }}

            <div class="text-center mt-3">
                <a href="{{ path('rh_offre_index') }}" class="btn btn-link">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}