{% extends 'base.html.twig' %}

{% block title %}Liste des Partenariats{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">Liste des Partenariats</h1>
        </div>

        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>

                    <th>Nom</th>
                    <th>Adresse</th>
                </tr>
            </thead>
            <tbody>
                {% for partenariat in partenariats %}
                    <tr>
                        <td>{{ partenariat.nompartenariat }}</td>
                        <td>{{ partenariat.adressepartenariat }}</td>
                        <td>
                            <a href="{{ path('app_partenariat_show', {'idpartenariat': partenariat.idpartenariat}) }}" class="btn btn-info btn-sm">👁️ Voir</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun partenariat trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_hebergement_index') }}" class="btn btn-outline-primary">
                🏨 Voir les hébergements disponibles
            </a>
        </div>
    </div>
{% endblock %}
