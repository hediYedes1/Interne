{% extends 'base.html.twig' %}

{% block title %}Détails du Partenariat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">📄 Détails du Partenariat</h1>

        <table class="table table-bordered shadow-sm">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ partenariat.idpartenariat }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ partenariat.nompartenariat }}</td>
                </tr>
                <tr>
                    <th scope="row">Adresse</th>
                    <td>{{ partenariat.adressepartenariat }}</td>
                </tr>
                <tr>
                    <th scope="row">Téléphone</th>
                    <td>{{ partenariat.numtelpartenariat }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4 d-flex gap-2">
            <a href="{{ path('app_partenariat_index') }}" class="btn btn-secondary">⬅️ Retour à la liste</a>
        </div>
    </div>
{% endblock %}
