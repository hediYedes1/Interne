{% extends 'base.html.twig' %}

{% block title %}D√©tail de la publication{% endblock %}

{% block css %}
{{ parent() }}
<style>
    .comment-card {
        transition: transform 0.2s ease-in-out;
    }
    .comment-card:hover {
        transform: translateY(-2px);
    }
    .btn-primary {
        transition: background-color 0.3s ease;
    }
</style>
{% endblock %}

{% block sideBar %}
{{ parent() }}
{% endblock %} 

{% block headside %}
{{ parent() }}
{% endblock %}

{% block breadcrumb %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Publication Card -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-100">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">{{ publication.titre }}</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <p class="text-gray-600"><span class="font-semibold">ID:</span> {{ publication.idPublication }}</p>
                <p class="text-gray-600"><span class="font-semibold">Contenu:</span> {{ publication.contenu }}</p>
                <p class="text-gray-600"><span class="font-semibold">Date:</span> 
                    {{ publication.datePublication ? publication.datePublication|date('d/m/Y H:i') : 'Non pr√©cis√©e' }}
                </p>
                <p class="text-gray-600"><span class="font-semibold">Note:</span> 
                    <span class="text-yellow-500">‚≠ê {{ publication.rating }}</span>
                </p>
            </div>

            {% if publication.imagePath %}
                <div class="flex justify-center md:justify-end">
                    <img src="{{ asset('Uploads/' ~ publication.imagePath) }}" 
                         alt="Publication Image" 
                         class="w-full max-w-sm rounded-lg shadow-md object-cover">
                </div>
            {% endif %}
        </div>

        <div class="mt-8 flex flex-wrap gap-4 items-center">
            <a href="{{ path('app_publication_edit', {'idPublication': publication.idPublication}) }}"
               class="btn-primary inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                ‚úèÔ∏è Modifier
            </a>

            {{ include('publication/_delete_form.html.twig', { publication: publication }) }}

            <a href="{{ path('app_publication_index') }}"
               class="text-gray-500 hover:text-gray-700 text-sm font-medium transition">
                ‚Üê Retour √† la liste
            </a>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">üí¨ Commentaires</h3>

        {% if commentaires is not empty %}
            <div class="space-y-6">
                {% for commentaire in commentaires %}
                    <div class="comment-card bg-gray-50 p-6 rounded-lg shadow-sm border border-gray-200">
                        <p class="text-sm text-gray-500 mb-2">
                            <span class="font-semibold">Post√© le :</span> {{ commentaire.dateCommentaire|date('d/m/Y H:i') }}
                        </p>
                        <p class="text-gray-700">{{ commentaire.contenu }}</p>
                        <div class="mt-3 flex gap-4 text-sm text-gray-500">
                            <span>üëç {{ commentaire.likes }}</span>
                            <span>üëé {{ commentaire.dislikes }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500 italic">Aucun commentaire pour cette publication.</p>
        {% endif %}
    </div>

    <!-- Comment Form -->
    <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">‚ûï Ajouter un commentaire</h3>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            {{ form_label(form.contenu, null, {
                'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}
            }) }}
            {{ form_widget(form.contenu, {
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}
            }) }}
            {{ form_errors(form.contenu, {
                'attr': {'class': 'text-red-500 text-sm mt-1'}
            }) }}
        </div>
        <button type="submit" 
                class="btn-primary inline-flex items-center px-6 py-3 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition">
            üí¨ Commenter
        </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}