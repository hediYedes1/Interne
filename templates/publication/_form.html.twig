<style>
/* Style gÃ©nÃ©ral du formulaire */
form.space-y-4 {
    max-width: 600px;
    margin: 2rem auto;
    background-color: #ffffff;
    padding: 2rem;
    border-radius: 0.75rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Labels */
form.space-y-4 label {
    display: block;
    margin-bottom: 0.25rem;
    font-weight: 600;
    color: #374151;
}

/* Champs de texte */
form.space-y-4 input[type="text"],
form.space-y-4 input[type="email"],
form.space-y-4 input[type="number"],
form.space-y-4 textarea,
form.space-y-4 select {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    box-sizing: border-box;
    transition: border 0.2s ease;
}

form.space-y-4 input:focus,
form.space-y-4 textarea:focus,
form.space-y-4 select:focus {
    border-color: #3b82f6;
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

/* Fichier */
form.space-y-4 input[type="file"] {
    font-size: 0.875rem;
    color: #6b7280;
}

/* Bouton */
form.space-y-4 button {
    background-color: #2563eb;
    color: white;
    padding: 0.5rem 1.25rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

form.space-y-4 button:hover {
    background-color: #1d4ed8;
}

/* Erreurs */
form.space-y-4 .form-error-message {
    color: #dc2626;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

</style>

{{ form_start(form, {'attr': {'class': 'space-y-4', 'enctype': 'multipart/form-data'}}) }}

    {% for field in form %}
        <div>
            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}

            {% if field.vars.name == 'imageFile' %}
                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}}) }}
                <p class="mt-1 text-xs text-gray-500">Formats acceptÃ©s: JPG, PNG, GIF (max 2MB)</p>
            {% else %}
                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {% endif %}

            {{ form_errors(field) }}
        </div>
    {% endfor %}

<button class="mt-4 inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700 transition">
    {{ button_label|default('ðŸ’¾ Enregistrer') }}
</button>

{{ form_end(form) }}